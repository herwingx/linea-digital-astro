---
// src/pages/asociados.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import AnimatedCounter from "../components/AnimatedCounter.astro";

// --- TYPES & DATA ---
// Enfoque: Beneficios tangibles para un comerciante físico
const FEATURES = [
  {
    title: "Comisiones Agresivas",
    desc: "Gana desde el primer peso. Esquema de comisiones por activación, portabilidad y recarga con pago semanal.",
    icon: "chart", // Money chart
    colSpan: "md:col-span-2", 
    colorClass: "text-emerald-500",
    bgClass: "from-emerald-500/20 to-teal-500/5"
  },
  {
    title: "Stock a Consignación",
    desc: "No descapitalices tu negocio. Te surtimos SIMs y equipos bajo esquema de confianza (sujeto a historial).",
    icon: "box", // Box
    colSpan: "md:col-span-1",
    colorClass: "text-blue-500",
    bgClass: "from-blue-500/20 to-indigo-500/5"
  },
  {
    title: "Portal de Autoservicio",
    desc: "Plataforma web para realizar recargas, consultar saldo y tramitar garantías 24/7.",
    icon: "device", // Tablet/Phone
    colSpan: "md:col-span-1",
    colorClass: "text-purple-500",
    bgClass: "from-purple-500/20 to-fuchsia-500/5"
  },
  {
    title: "Material Publicitario",
    desc: "Te equipamos con lonas, exhibidores y branding oficial de Telcel para que tu local destaque.",
    icon: "star", // Badge
    colSpan: "md:col-span-2",
    colorClass: "text-cyan-500",
    bgClass: "from-cyan-500/20 to-sky-500/5"
  }
];

const INVENTORY = [
  { category: "Alta Rotación", title: "Chips Express", metric: "Gana $50/act", image: "https://images.unsplash.com/photo-1562831915-622067ac2cce?q=80&w=1000&auto=format&fit=crop" },
  { category: "Hardware", title: "Smartphones", metric: "Precio Mayoreo", image: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?q=80&w=1000&auto=format&fit=crop" },
  { category: "Tendencia", title: "Internet en Casa", metric: "Comisión Recurrente", image: "https://images.unsplash.com/photo-1544197150-b99a580bbcbf?q=80&w=1000&auto=format&fit=crop" }
];
---

<BaseLayout
  title="Conviértete en Distribuidor | Grupo Linea Digital"
  description="Vende recargas, chips y equipos Telcel en tu negocio. Precios de mayoreo y altas comisiones."
>
  
  <!-- BACKGROUND GLOBAL -->
  <div class="fixed inset-0 pointer-events-none opacity-[0.4] z-0 mix-blend-overlay">
      <svg class="w-full h-full"><filter id="noiseFilter"><feTurbulence type="fractalNoise" baseFrequency="0.85" numOctaves="3" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(#noiseFilter)"/></svg>
  </div>
  
  <!-- Ambient Glows -->
  <div class="fixed inset-0 z-0 pointer-events-none overflow-hidden">
      <div class="absolute top-[-10%] right-[20%] w-[40vw] h-[40vw] rounded-full bg-blue-600/10 blur-[120px] mix-blend-screen animate-pulse-slow"></div>
  </div>

  <main class="relative z-10 w-full overflow-hidden">
    
    <!-- 1. HERO SECTION: PROPUESTA DE VALOR DIRECTA -->
    <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 px-6 text-center">
      
      <!-- Badge de Urgencia/Oportunidad -->
      <div class="inline-flex items-center gap-2.5 px-4 py-1.5 rounded-full border border-blue-200/50 bg-white/50 dark:bg-blue-900/10 dark:border-blue-500/30 backdrop-blur-md mb-8 animate-fade-in-up cursor-default shadow-sm">
        <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
        </span>
        <span class="text-[11px] font-bold uppercase tracking-widest text-slate-600 dark:text-blue-300">Altas Nuevas Abiertas</span>
      </div>

      <h1 class="max-w-5xl mx-auto text-5xl sm:text-7xl font-black tracking-tighter text-slate-900 dark:text-white leading-[0.95] mb-8 animate-fade-in-up animation-delay-100">
        Haz crecer tu negocio con <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-400">
          la Red #1 de México.
        </span>
      </h1>
      
      <p class="max-w-2xl mx-auto text-xl text-slate-600 dark:text-slate-300 font-medium leading-relaxed mb-12 animate-fade-in-up animation-delay-200">
        Convierte tu local en un <strong>Punto de Venta Autorizado</strong>. Vende recargas, chips y equipos con precios de mayoreo y soporte local en Chiapas.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-5 animate-fade-in-up animation-delay-300">
        <!-- CTA Principal: WhatsApp (Conversión directa) -->
        <a href="https://wa.me/529616189200?text=Hola,%20quiero%20ser%20distribuidor%20Telcel" target="_blank" class="group relative flex h-14 items-center justify-center gap-3 overflow-hidden rounded-full bg-blue-600 px-8 text-sm font-bold uppercase tracking-widest text-white shadow-xl shadow-blue-600/30 transition-all hover:bg-blue-500 hover:scale-[1.02] active:scale-[0.98]">
            <span class="relative z-10">Quiero ser Distribuidor</span>
            <svg class="relative z-10 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            <div class="absolute inset-0 -translate-x-full group-hover:animate-shine bg-gradient-to-r from-transparent via-white/20 to-transparent z-0"></div>
        </a>
        
        <!-- CTA Secundario -->
        <a href="#beneficios" class="h-14 flex items-center justify-center rounded-full border border-slate-200 bg-white/50 backdrop-blur-md px-8 text-sm font-bold uppercase tracking-widest text-slate-600 transition-colors hover:border-blue-300 hover:text-blue-600 dark:border-white/10 dark:bg-white/5 dark:text-slate-300 dark:hover:bg-white/10 dark:hover:text-white">
            Ver Beneficios
        </a>
      </div>
    </section>

    <!-- 2. STATS "THE DEAL" (Números Reales para un Socio) -->
    <div class="container mx-auto px-4 relative z-20 -mt-8 mb-24 animate-fade-in-up animation-delay-300">
        <div class="bg-white/80 dark:bg-[#151e2e]/90 backdrop-blur-xl border border-slate-200/50 dark:border-white/10 rounded-[2rem] shadow-2xl shadow-slate-200/50 dark:shadow-black/50 overflow-hidden max-w-5xl mx-auto">
            <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-slate-100 dark:divide-white/5">
                 {/* Socios */}
                 <div class="py-8 text-center group">
                    <span class="block text-3xl md:text-4xl font-black tracking-tight text-slate-900 dark:text-white mb-1">
                        <AnimatedCounter end={2500} prefix="+" duration={2000} />
                    </span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Puntos de Venta</span>
                 </div>
                 
                 {/* Comisión */}
                 <div class="py-8 text-center group">
                    <span class="block text-3xl md:text-4xl font-black tracking-tight text-emerald-500 mb-1">
                        <AnimatedCounter end={15} suffix="%" duration={1500} />
                    </span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Comisión Máxima</span>
                 </div>

                 {/* Cobertura */}
                 <div class="py-8 text-center group">
                    <span class="block text-3xl md:text-4xl font-black tracking-tight text-blue-500 mb-1">48h</span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Tiempo de Entrega</span>
                 </div>

                 {/* Costo (El gancho más fuerte) */}
                 <div class="py-8 text-center group bg-blue-50/50 dark:bg-blue-900/10">
                    <span class="block text-3xl md:text-4xl font-black tracking-tight text-blue-600 dark:text-blue-400 mb-1">
                        $<AnimatedCounter end={0} duration={1000} />
                    </span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-blue-700 dark:text-blue-300">Costo de Inscripción</span>
                 </div>
            </div>
        </div>
    </div>

    <!-- 3. BENTO GRID: SOLUCIONES REALES -->
    <section id="beneficios" class="py-24 px-6 container mx-auto max-w-7xl">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6">
            <div class="max-w-2xl">
                <span class="text-blue-600 dark:text-blue-400 font-bold uppercase tracking-widest text-xs mb-2 block">Modelo de Negocio</span>
                <h2 class="text-3xl md:text-5xl font-black text-slate-900 dark:text-white tracking-tight mb-4">
                    Todo lo que necesitas <br/> <span class="text-slate-400">para vender más.</span>
                </h2>
                <p class="text-lg text-slate-500 dark:text-slate-400">
                    Olvídate de trámites complejos. Te damos las herramientas, el stock y el soporte para que tú solo te preocupes por atender a tus clientes.
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6 auto-rows-[320px]">
            {FEATURES.map((feat) => (
                <article class={`
                    relative group rounded-[2.5rem] overflow-hidden 
                    bg-white dark:bg-[#151e2e]
                    border border-slate-200 dark:border-white/5
                    shadow-sm hover:shadow-2xl hover:shadow-blue-900/10 
                    transition-all duration-500 ease-out hover:-translate-y-2
                    ${feat.colSpan}
                `}>
                    
                    <!-- Gradient Hover Background -->
                    <div class={`absolute inset-0 bg-gradient-to-br opacity-0 group-hover:opacity-100 transition-opacity duration-700 ${feat.bgClass}`}></div>
                    
                    <div class="relative z-10 h-full flex flex-col justify-between p-8 md:p-10 select-none">
                        
                        <!-- Icon Box -->
                        <div class="flex items-start justify-between">
                            <div class={`
                                w-14 h-14 rounded-2xl 
                                bg-slate-50 dark:bg-white/5
                                border border-slate-100 dark:border-white/10
                                flex items-center justify-center
                                shadow-sm group-hover:scale-110 group-hover:-rotate-3 
                                transition-all duration-500
                                ${feat.colorClass}
                            `}>
                                {/* Icon Mapping simple */}
                                {feat.icon === 'chart' && <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>}
                                {feat.icon === 'box' && <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>}
                                {feat.icon === 'device' && <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>}
                                {feat.icon === 'star' && <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>}
                            </div>
                        </div>

                        <!-- Text Content -->
                        <div>
                            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-3 leading-tight group-hover:translate-x-1 transition-transform">
                                {feat.title}
                            </h3>
                            <p class="text-slate-500 dark:text-slate-400 text-sm font-medium leading-relaxed group-hover:text-slate-600 dark:group-hover:text-slate-300 transition-colors">
                                {feat.desc}
                            </p>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </section>

    <!-- 4. INVENTARIO (Slider Visual) -->
    <section class="py-24 border-y border-slate-200/50 dark:border-white/5 bg-slate-50 dark:bg-[#0f1623]">
        <div class="container mx-auto px-6 mb-12 flex items-center justify-between">
            <div>
                <span class="text-blue-600 dark:text-blue-400 font-bold uppercase tracking-widest text-xs">Catálogo de Productos</span>
                <h2 class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white mt-2">¿Qué puedes vender?</h2>
            </div>
            
            <div class="hidden md:flex gap-2 text-slate-400 text-xs font-bold uppercase tracking-widest items-center">
                <span>Desliza para ver</span>
                <svg class="w-4 h-4 animate-bounce-x" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </div>
        </div>

        <div class="flex gap-6 overflow-x-auto pb-12 px-6 md:px-[max(2rem,calc((100vw-1280px)/2))] snap-x snap-mandatory hide-scrollbar">
            {INVENTORY.map((item) => (
                <div class="group relative flex-shrink-0 w-[85vw] md:w-[380px] aspect-[4/5] rounded-[2.5rem] overflow-hidden snap-center cursor-pointer shadow-lg transition-all duration-500 hover:shadow-2xl hover:-translate-y-2">
                    <img src={item.image} alt={item.title} class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
                    <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent opacity-80"></div>
                    
                    <div class="absolute bottom-0 left-0 w-full p-8">
                         <div class="mb-3 inline-block px-3 py-1 rounded-lg bg-blue-600/90 text-[10px] font-bold uppercase tracking-widest text-white backdrop-blur-md">
                            {item.category}
                         </div>
                         <h3 class="text-3xl font-black text-white mb-2">{item.title}</h3>
                         <div class="flex items-center gap-2 text-emerald-300 font-bold text-sm">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
                            {item.metric}
                         </div>
                    </div>
                </div>
            ))}
            
            <!-- Card "Ver Más" -->
            <a href="https://wa.me/529616189200" class="group relative flex-shrink-0 w-[85vw] md:w-[380px] aspect-[4/5] rounded-[2.5rem] snap-center bg-white dark:bg-[#151e2e] border-2 border-dashed border-slate-200 dark:border-white/10 flex flex-col items-center justify-center text-center hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/10 transition-all">
                 <div class="w-20 h-20 rounded-full bg-slate-100 dark:bg-white/5 flex items-center justify-center text-slate-400 group-hover:text-blue-600 group-hover:scale-110 transition-all mb-4">
                    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                 </div>
                 <span class="font-bold text-xl text-slate-900 dark:text-white">Solicitar Catálogo <br/> PDF Completo</span>
            </a>
        </div>
    </section>

    <!-- 5. FINAL CTA (Conversión Retail) -->
    <section class="py-24 px-4 container mx-auto relative">
         <div class="relative rounded-[3rem] overflow-hidden bg-gradient-to-br from-blue-900 to-slate-900 p-12 md:p-24 text-center shadow-2xl shadow-blue-900/40 border border-white/10">
             
             <!-- Noise & Orb -->
             <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 mix-blend-overlay"></div>
             <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-blue-500/30 rounded-full blur-[100px] animate-pulse-slow"></div>

             <div class="relative z-10 max-w-3xl mx-auto">
                 <h2 class="text-4xl md:text-6xl font-black text-white tracking-tighter mb-6 leading-none">
                     ¿Listo para facturar?
                 </h2>
                 <p class="text-xl text-blue-100 mb-10 max-w-xl mx-auto font-medium">
                     El alta es inmediata. Sin trámites burocráticos. Envíanos un WhatsApp y comienza a vender hoy mismo.
                 </p>
                 
                 <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="https://wa.me/529616189200" class="inline-flex items-center justify-center gap-3 px-8 py-4 rounded-full bg-green-500 text-white font-bold tracking-widest uppercase hover:bg-green-400 hover:shadow-lg hover:shadow-green-500/30 transition-all duration-300">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.548 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path></svg>
                        <span>Contactar Asesor</span>
                    </a>
                    <a href="tel:9616189200" class="inline-flex items-center justify-center gap-3 px-8 py-4 rounded-full bg-white text-slate-900 font-bold tracking-widest uppercase hover:bg-slate-100 transition-all">
                        Llamar a Oficina
                    </a>
                 </div>
             </div>
         </div>
    </section>

  </main>
</BaseLayout>

<style>
  /* Utilities */
  .hide-scrollbar::-webkit-scrollbar { display: none; }
  .hide-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

  /* Animation: Shine */
  @keyframes shine { 100% { left: 125%; } }
  .animate-shine { animation: shine 1.5s; }
  
  /* Animations */
  @keyframes pulse-slow {
      0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
      50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.7; }
  }
  .animate-pulse-slow { animation: pulse-slow 6s ease-in-out infinite; }
  
  @keyframes bounce-x {
      0%, 100% { transform: translateX(0); }
      50% { transform: translateX(25%); }
  }
  .animate-bounce-x { animation: bounce-x 1s infinite; }

  /* Fade Up */
  @keyframes fade-in-up {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in-up { animation: fade-in-up 0.8s ease-out forwards; opacity: 0; }
  .animation-delay-100 { animation-delay: 0.1s; }
  .animation-delay-200 { animation-delay: 0.2s; }
  .animation-delay-300 { animation-delay: 0.3s; }
</style>