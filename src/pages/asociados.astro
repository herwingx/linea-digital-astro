---
import BaseLayout from "../layouts/BaseLayout.astro";

// Iconos SVG como constantes para renderizar limpio (Clean Code)
const ICONS = {
  COMMISSION: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  RISK_FREE: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  PLATFORM: "M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z", // Grid View
  SUPPORT: "M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" // Life Ring style
};

const beneficios = [
  {
    titulo: "Comisiones Competitivas",
    descripcion: "Maximiza tus ganancias con porcentajes líderes en el mercado por cada transacción exitosa.",
    iconPath: ICONS.COMMISSION
  },
  {
    titulo: "Cero Riesgo",
    descripcion: "Sin inversión inicial obligatoria ni stock forzoso. Inicia con lo que mas te convenga.",
    iconPath: ICONS.RISK_FREE
  },
  {
    titulo: "Control Total",
    descripcion: "Plataforma digital 24/7 para gestionar saldo, ventas y reportes en tiempo real.",
    iconPath: ICONS.PLATFORM
  },
  {
    titulo: "Respaldo Líder",
    descripcion: "Únete a la red del Distribuidor #1 con soporte y capacitación constante.",
    iconPath: ICONS.SUPPORT
  },
  
];

const catalogo = [
{
    title: "Tiempo Aire",
    subtitle: "Recargas multimarca al instante",
    bgClass: "from-blue-500 to-blue-600",
    img: "https://images.unsplash.com/photo-1585951237318-9ea5e175b891?q=80&w=2070&auto=format&fit=crop"
  },
  {
    title: "Equipos Libres",
    subtitle: "Stock de Apple, Samsung y más",
    bgClass: "from-purple-500 to-purple-600",
    img: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?q=80&w=2080&auto=format&fit=crop"
  },
  {
    title: "Accesorios",
    subtitle: "Alta rotación y margen",
    bgClass: "from-emerald-500 to-emerald-600",
    img: "https://images.unsplash.com/photo-1601593346740-925612772716?q=80&w=1935&auto=format&fit=crop"
  }

];
---

<BaseLayout
  title="Conviértete en Asociado | Línea Digital"
  description="Genera ingresos extra vendiendo recargas, planes y equipos Telcel. Únete a nuestra red de distribuidores."
>
  
  <!-- 1. HERO SECTION (CLEAN GRADIENT) -->
  <section class="relative py-32 overflow-hidden bg-slate-50 dark:bg-slate-950">
      <!-- Background Deco -->
      <div class="absolute inset-0 pointer-events-none">
          <!-- Radial Light Effect -->
          <div class="absolute top-[-20%] right-[-10%] w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl opacity-60 dark:opacity-20 animate-pulse"></div>
          <div class="absolute bottom-[-10%] left-[-10%] w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-3xl opacity-50 dark:opacity-20"></div>
          <!-- Tech Grid -->
          <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
      </div>

      <div class="container relative z-10 mx-auto px-4 text-center max-w-4xl">
          
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 rounded-full bg-white border border-slate-200 shadow-sm px-4 py-1.5 mb-8 animate-fade-up dark:bg-white/5 dark:border-white/10 backdrop-blur cursor-default transition-transform hover:scale-105">
              <span class="relative flex h-2.5 w-2.5">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-blue-500"></span>
              </span>
              <span class="text-[11px] font-bold uppercase tracking-widest text-slate-600 dark:text-slate-300">Programa de Partners</span>
          </div>

          <h1 class="text-5xl md:text-7xl font-black tracking-tighter text-slate-900 dark:text-white mb-8 leading-[1.1] animate-fade-up animation-delay-100">
              Transforma tu negocio en un <br class="hidden md:block"/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">Punto de Venta Digital</span>
          </h1>
          
          <p class="text-xl text-slate-500 dark:text-slate-400 mb-12 leading-relaxed max-w-2xl mx-auto animate-fade-up animation-delay-200">
              La plataforma más sencilla para vender tiempo aire y tecnología. 
              Sin contratos forzosos, sin letra chiquita. Solo ganancias desde el primer día.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-up animation-delay-300">
              <a href="https://wa.me/529616189200?text=Info para Asociados" target="_blank" class="group flex h-14 items-center gap-3 rounded-full bg-blue-600 px-8 text-sm font-bold text-white shadow-2xl shadow-blue-600/20 transition-all hover:scale-105 hover:bg-blue-500">
                  <span>Aplicar Ahora</span>
                  <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
              <a href="#beneficios" class="flex h-14 items-center justify-center rounded-full border border-slate-200 bg-white px-8 text-sm font-bold text-slate-600 hover:border-blue-200 hover:text-blue-600 transition-all shadow-sm dark:bg-transparent dark:border-slate-700 dark:text-slate-300 dark:hover:text-white">
                  Ver Beneficios
              </a>
          </div>

      </div>
  </section>

  <!-- 2. STATS BAR (Prueba Social) -->
  <section class="py-12 border-y border-slate-100 bg-white/50 dark:border-white/5 dark:bg-slate-900/50 backdrop-blur-sm">
      <div class="container mx-auto px-4">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center divide-x divide-slate-200 dark:divide-white/5">
              <div class="animate-fade-up px-2">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">+10k</p>
                  <p class="text-[10px] md:text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Socios Activos</p>
              </div>
              <div class="animate-fade-up animation-delay-100 px-2">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">100%</p>
                  <p class="text-[10px] md:text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Disponibilidad</p>
              </div>
              <div class="animate-fade-up animation-delay-200 px-2">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">24/7</p>
                  <p class="text-[10px] md:text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Soporte Real</p>
              </div>
              <div class="animate-fade-up animation-delay-300 px-2">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">0%</p>
                  <p class="text-[10px] md:text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Costo Inicial</p>
              </div>
          </div>
      </div>
  </section>

  <!-- 3. BENEFICIOS (BENTO GRID) -->
  <section id="beneficios" class="py-24 bg-white dark:bg-slate-900 relative scroll-mt-20">
      <div class="container mx-auto px-4 max-w-7xl">
          <div class="mb-20 text-center max-w-3xl mx-auto animate-fade-up">
              <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl md:text-5xl mb-6">Todo lo que necesitas para crecer</h2>
              <p class="text-xl text-slate-500 dark:text-slate-400 mb-12 leading-relaxed max-w-2xl mx-auto animate-fade-up animation-delay-200">Nuestra plataforma está diseñada para eliminar barreras. Te damos tecnología empresarial sin la complejidad.</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 justify-center">
              {beneficios.map((item, index) => (
                  <div class="group relative p-8 rounded-[2.5rem] bg-slate-50 transition-all duration-500 border border-slate-100 hover:bg-white hover:shadow-2xl hover:shadow-blue-900/5 hover:-translate-y-1 dark:bg-white/5 dark:border-white/5 dark:hover:bg-white/10 animate-fade-up" style={`animation-delay: ${index * 100}ms`}>
                      <!-- Icon Bubble -->
                      <div class="mb-8 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-blue-100 text-blue-600 group-hover:bg-blue-600 group-hover:text-white group-hover:rotate-3 transition-all duration-500 dark:bg-blue-900/30 dark:text-blue-400 dark:group-hover:bg-blue-600 dark:group-hover:text-white">
                         <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.iconPath} /></svg>
                      </div>
                      
                      <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3">{item.titulo}</h3>
                      <p class="text-base leading-relaxed text-slate-500 dark:text-slate-400 group-hover:text-slate-700 dark:group-hover:text-slate-300 transition-colors">
                          {item.descripcion}
                      </p>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- 4. CATALOGO SHOWCASE (HORIZONTAL SNAP) -->
  <section class="py-24 bg-slate-50 dark:bg-slate-950 overflow-hidden border-t border-slate-200 dark:border-white/5">
      <div class="container mx-auto px-4 mb-12 flex flex-col md:flex-row md:items-end justify-between gap-6">
         <div class="max-w-xl animate-fade-up">
             <span class="text-blue-600 font-bold uppercase tracking-widest text-xs dark:text-blue-400">Catálogo Extendido</span>
             <h2 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mt-2">Multiplica tus Ingresos</h2>
             <p class="text-xl text-slate-500 dark:text-slate-400 mb-12 leading-relaxed max-w-2xl mx-auto animate-fade-up animation-delay-200">Ofrece una gama completa de soluciones digitales.</p>
         </div>
         
         <!-- Action Link -->
         <a href="/contacto" class="group hidden md:flex items-center gap-2 text-sm font-bold text-slate-600 hover:text-blue-600 transition-colors dark:text-slate-400 dark:hover:text-blue-400">
            Ver catálogo completo <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
         </a>
      </div>

      <!-- Scroll Container -->
      <div class="flex gap-6 overflow-x-auto pb-16 px-4 md:px-12 snap-x snap-mandatory scrollbar-hide">
         {catalogo.map((cat, index) => (
            <div class="relative flex-shrink-0 w-[85vw] md:w-[400px] h-[480px] rounded-[2.5rem] overflow-hidden snap-center group shadow-lg transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl animate-fade-up" style={`animation-delay: ${index * 150}ms`}>
               
               <!-- Imagen -->
               <img 
                 src={cat.img} 
                 alt={cat.title} 
                 class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale-[0.2] group-hover:grayscale-0" 
                 loading="lazy"
               />
               
               <!-- Overlay Gradiente -->
               <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/20 to-transparent opacity-90 transition-opacity group-hover:opacity-100"></div>

               <!-- Content -->
               <div class="absolute bottom-0 left-0 p-10 w-full z-10 transform translate-y-2 transition-transform duration-500 group-hover:translate-y-0">
                   <div class={`w-12 h-1.5 mb-6 rounded-full bg-gradient-to-r ${cat.bgClass}`}></div>
                   <h3 class="text-xl md:text-2xl font-bold text-white mb-2 tracking-tight">{cat.title}</h3>
                   <p class="text-base leading-relaxed text-slate-500 dark:text-slate-400 mb-8 opacity-0 -translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">{cat.subtitle}</p>
                   
                   <div class="inline-flex items-center gap-3 text-white text-xs font-bold uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200">
                       <span class="w-8 h-8 rounded-full bg-white/20 backdrop-blur flex items-center justify-center">
                           <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                       </span>
                       Detalles
                   </div>
               </div>
            </div>
         ))}

         <!-- CTA Final Card -->
         <div class="relative flex-shrink-0 w-[85vw] md:w-[350px] h-[480px] rounded-[2.5rem] overflow-hidden snap-center bg-blue-600 flex flex-col items-center justify-center text-center p-10 text-white shadow-xl transition-all hover:scale-[1.02] hover:shadow-blue-600/40">
              <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-20 mix-blend-overlay"></div>
              
              <div class="relative z-10">
                  <div class="mx-auto w-20 h-20 rounded-full bg-white/20 backdrop-blur-md flex items-center justify-center mb-8 animate-pulse">
                      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                  </div>
                  <h3 class="text-2xl font-bold mb-3">¿Tienes otra idea?</h3>
                  <p class="text-blue-100 mb-10 text-lg">Adaptamos nuestra plataforma a tu modelo de negocio.</p>
                  <a href="https://wa.me/529616189200" target="_blank" class="inline-block px-8 py-4 bg-white text-blue-600 font-bold rounded-xl hover:bg-blue-50 transition-all shadow-lg hover:-translate-y-1">
                      Hablemos
                  </a>
              </div>
         </div>
     </div>
  </section>

  <!-- 5. FOOTER CTA (Dark Impact) -->
  <section class="py-28 px-6 bg-slate-900 relative overflow-hidden text-center">
      <!-- Effect -->
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-3xl h-full bg-blue-500/5 blur-3xl pointer-events-none"></div>
      
      <div class="relative z-10 max-w-4xl mx-auto">
          <h2 class="text-4xl md:text-6xl font-black text-white tracking-tighter mb-8">
             Tu éxito comienza <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">hoy mismo.</span>
          </h2>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
              <a href="https://wa.me/529614603593?text=Alta de Asociado" target="_blank" class="group relative px-8 py-4 bg-blue-600 text-white font-bold rounded-full overflow-hidden shadow-2xl shadow-blue-900/50 transition-transform hover:scale-105 hover:-translate-y-1">
                  <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-indigo-600 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <span class="relative flex items-center gap-2">
                     Registrarme por WhatsApp <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
                  </span>
              </a>
              <a href="/faq" class="px-8 py-4 bg-transparent border border-slate-700 text-slate-300 font-bold rounded-full hover:bg-white/5 hover:border-slate-500 hover:text-white transition-colors">
                  Preguntas Frecuentes
              </a>
          </div>
      </div>
  </section>

</BaseLayout>

<style>
  /* Utility para ocultar scrollbar pero permitir scroll */
  .scrollbar-hide::-webkit-scrollbar { display: none; }
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }

  /* Animación suave de entrada */
  @keyframes fade-up {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-up {
    animation: fade-up 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0; /* Evita flash antes de cargar */
  }
  
  /* Staggering */
  .animation-delay-100 { animation-delay: 150ms; }
  .animation-delay-200 { animation-delay: 300ms; }
  .animation-delay-300 { animation-delay: 450ms; }
</style>