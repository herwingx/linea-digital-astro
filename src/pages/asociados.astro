// src/pages/asociados.astro (Ejemplo de ruta)
import BaseLayout from "../layouts/BaseLayout.astro";

// Datos (pueden moverse a un archivo .ts externo)
const beneficios = [
  {
    titulo: "Comisiones Competitivas",
    descripcion: "Maximiza tus ganancias con porcentajes líderes en el mercado por cada transacción exitosa.",
    iconPath: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    titulo: "Cero Riesgo",
    descripcion: "Sin inversión inicial obligatoria ni stock forzoso. Inicia con lo que ya tienes.",
    iconPath: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    titulo: "Control Total",
    descripcion: "Plataforma digital 24/7 para gestionar saldo, ventas y reportes en tiempo real.",
    iconPath: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
  },
  {
    titulo: "Respaldo Líder",
    descripcion: "Únete a la red del Distribuidor #1 con soporte y capacitación constante.",
    iconPath: "M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
  },
];

const productos = [
  {
    titulo: "Tiempo Aire",
    desc: "Recargas universales instantáneas.",
    img: "https://images.unsplash.com/photo-1616077168712-0695454a73c2?q=80&w=2070&auto=format&fit=crop",
  },
  {
    titulo: "Equipos Libres",
    desc: "Smartphones demandados por tus clientes.",
    img: "https://images.unsplash.com/photo-1598327105666-5b89351aff23?q=80&w=2000&auto=format&fit=crop",
  },
  {
    titulo: "Accesorios",
    desc: "Fundas, micas y cargadores originales.",
    img: "https://images.unsplash.com/photo-1634403665481-74948d815f03?q=80&w=1974&auto=format&fit=crop",
  },
];
---

<BaseLayout
  title="Conviértete en Asociado | Línea Digital"
  description="Genera ingresos extra vendiendo recargas, planes y equipos Telcel. Únete a nuestra red de distribuidores."
>
  
  <!-- 1. HERO SECTION (CLEAN GRADIENT) -->
  <section class="relative py-32 overflow-hidden bg-slate-50 dark:bg-slate-950">
      <!-- Background Deco -->
      <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-[-20%] right-[-10%] w-[800px] h-[800px] bg-blue-500/10 rounded-full blur-3xl opacity-60 dark:opacity-20 animate-pulse"></div>
          <div class="absolute bottom-[-10%] left-[-10%] w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-3xl opacity-50 dark:opacity-20"></div>
      </div>

      <div class="container relative z-10 mx-auto px-4 text-center max-w-4xl">
          
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 rounded-full bg-white border border-slate-200 shadow-sm px-4 py-1.5 mb-8 animate-fade-up dark:bg-white/5 dark:border-white/10 backdrop-blur">
              <span class="relative flex h-2.5 w-2.5">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-blue-500"></span>
              </span>
              <span class="text-xs font-bold uppercase tracking-widest text-slate-600 dark:text-slate-300">Programa de Partners</span>
          </div>

          <h1 class="text-5xl md:text-7xl font-bold tracking-tighter text-slate-900 dark:text-white mb-6 leading-[1.1] animate-fade-up animation-delay-100">
              Transforma tu negocio en un <br class="hidden md:block"/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">Punto de Venta Digital</span>
          </h1>
          
          <p class="text-xl text-slate-500 dark:text-slate-400 mb-10 leading-relaxed max-w-2xl mx-auto animate-fade-up animation-delay-200">
              La plataforma más sencilla para vender tiempo aire y tecnología. 
              Sin contratos forzosos, sin letra chiquita. Solo ganancias.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-up animation-delay-300">
              <a href="https://wa.me/529616189200?text=Info para Asociados" target="_blank" class="group flex h-14 items-center gap-3 rounded-full bg-blue-600 px-8 text-sm font-bold text-white shadow-xl shadow-blue-600/20 transition-all hover:scale-105 hover:bg-blue-500">
                  <span>Aplicar Ahora</span>
                  <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </a>
              <a href="#beneficios" class="flex h-14 items-center justify-center rounded-full border border-slate-200 bg-white px-8 text-sm font-bold text-slate-600 hover:border-blue-200 hover:text-blue-600 transition-all dark:bg-transparent dark:border-slate-700 dark:text-slate-300 dark:hover:text-white">
                  Ver Beneficios
              </a>
          </div>

      </div>
  </section>

  <!-- 2. BENEFICIOS (BENTO GRID) -->
  <section id="beneficios" class="py-24 bg-white dark:bg-slate-900 relative border-y border-slate-100 dark:border-white/5">
      <div class="container mx-auto px-4">
          <div class="mb-16 text-center max-w-2xl mx-auto">
              <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">Todo lo que necesitas para crecer</h2>
              <p class="mt-4 text-slate-500 dark:text-slate-400">Nuestra plataforma está diseñada para eliminar barreras y maximizar tus ingresos desde el día uno.</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              {beneficios.map(item => (
                  <div class="group relative p-8 rounded-[2rem] bg-slate-50 hover:bg-blue-50 transition-colors border border-slate-100 dark:bg-white/5 dark:border-white/5 dark:hover:bg-white/10">
                      <div class="mb-6 inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-blue-100 text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors dark:bg-blue-900/30 dark:text-blue-400">
                         <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.iconPath} /></svg>
                      </div>
                      <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">{item.titulo}</h3>
                      <p class="text-sm leading-relaxed text-slate-500 dark:text-slate-400 group-hover:text-slate-700 dark:group-hover:text-slate-300">
                          {item.descripcion}
                      </p>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- 3. CATALOGO SHOWCASE -->
  <section class="py-24 bg-slate-50 dark:bg-slate-950 overflow-hidden">
      <div class="container mx-auto px-4">
          <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12">
             <div>
                 <span class="text-blue-600 font-bold uppercase tracking-widest text-xs">Catálogo Extendido</span>
                 <h2 class="text-3xl font-bold text-slate-900 dark:text-white mt-2">Multiplica tus Ventas</h2>
             </div>
             <a href="/contacto" class="group flex items-center gap-2 text-sm font-bold text-slate-600 hover:text-blue-600 transition-colors dark:text-slate-400">
                Ver portafolio completo <span class="block transition-transform group-hover:translate-x-1">→</span>
             </a>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
             {productos.map((prod) => (
                <div class="group relative h-[400px] overflow-hidden rounded-[2.5rem] shadow-sm hover:shadow-2xl transition-all duration-500 cursor-default">
                   <!-- Imagen -->
                   <img 
                     src={prod.img} 
                     alt={prod.titulo} 
                     class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110" 
                     loading="lazy"
                   />
                   
                   <!-- Overlay -->
                   <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-slate-900/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>

                   <!-- Contenido -->
                   <div class="absolute bottom-0 left-0 p-8 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                       <div class="h-1 w-12 bg-blue-500 rounded-full mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100"></div>
                       <h3 class="text-2xl font-bold text-white mb-2">{prod.titulo}</h3>
                       <p class="text-slate-300 text-sm opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">
                           {prod.desc}
                       </p>
                   </div>
                </div>
             ))}
          </div>

      </div>
  </section>

  <!-- 4. CTA FOOTER -->
  <section class="relative py-24 px-4 bg-blue-600 dark:bg-blue-700 overflow-hidden">
      <!-- Patrón geométrico -->
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 30px 30px;"></div>
      <div class="absolute -right-40 -top-40 w-[600px] h-[600px] rounded-full bg-white/10 blur-[80px]"></div>

      <div class="container relative z-10 mx-auto text-center max-w-2xl">
          <h2 class="text-3xl md:text-5xl font-bold text-white tracking-tight mb-6">
             Tu éxito comienza hoy
          </h2>
          <p class="text-blue-100 text-lg mb-10">
             No esperes más. Únete a la red de emprendedores digitales más grande de la región.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
              <a href="https://wa.me/529616189200?text=Alta de Asociado" target="_blank" class="flex items-center justify-center gap-2 bg-white text-blue-600 px-8 py-4 rounded-xl font-bold text-sm hover:bg-blue-50 transition-all shadow-lg hover:scale-105">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.017-1.04 2.479 0 1.462 1.065 2.876 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.084 1.758-.718 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                  <span>Hablar con Asesor</span>
              </a>
              <a href="/faq" class="px-8 py-4 bg-blue-700 text-white rounded-xl font-bold text-sm border border-blue-400/30 hover:bg-blue-800 transition-colors flex items-center justify-center">
                  Preguntas Frecuentes
              </a>
          </div>
      </div>
  </section>

</BaseLayout>