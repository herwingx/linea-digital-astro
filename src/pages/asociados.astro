---
// src/pages/asociados.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";

const beneficios = [
  {
    titulo: "Ganancias Exponenciales",
    descripcion: "Recibe comisiones competitivas instantáneas. Cada venta suma, y nuestro esquema crece contigo.",
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    titulo: "Negocio Libre de Riesgo",
    descripcion: "Olvídate del inventario obsoleto. Plataforma 100% digital sin cuotas de entrada ocultas.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    titulo: "Dashboard Inteligente",
    descripcion: "Gestiona saldos, reportes y usuarios desde cualquier dispositivo con nuestra app PWA.",
    icon: "M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
  },
  {
    titulo: "Respaldo Total",
    descripcion: "Acceso a materiales de marketing y soporte técnico prioritario por WhatsApp.",
    icon: "M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
  },
];

const catalogo = [
  {
    title: "Tiempo Aire",
    subtitle: "Recargas multimarca al instante",
    bgClass: "from-blue-500 to-blue-600",
    img: "https://images.unsplash.com/photo-1585951237318-9ea5e175b891?q=80&w=2070&auto=format&fit=crop"
  },
  {
    title: "Equipos Libres",
    subtitle: "Stock de Apple, Samsung y más",
    bgClass: "from-purple-500 to-purple-600",
    img: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?q=80&w=2080&auto=format&fit=crop"
  },
  {
    title: "Accesorios",
    subtitle: "Alta rotación y margen",
    bgClass: "from-emerald-500 to-emerald-600",
    img: "https://images.unsplash.com/photo-1601593346740-925612772716?q=80&w=1935&auto=format&fit=crop"
  }
];
---

<BaseLayout
  title="Asociados B2B | Línea Digital"
  description="Plataforma líder para distribuidores Telcel. Inicia tu negocio hoy."
>
<>

<div>
  <!-- HERO PRINCIPAL -->
  <section class="relative pt-32 pb-24 overflow-hidden">
      <!-- Grid Pattern Background -->
      <div class="absolute inset-0 z-0 opacity-[0.3]" style="background-image: radial-gradient(#3b82f6 1px, transparent 1px); background-size: 24px 24px;"></div>
      
      <!-- Glow Radial -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] bg-blue-500/10 rounded-full blur-[100px] pointer-events-none"></div>

      <div class="container relative z-10 mx-auto px-4 text-center">
          <div class="animate-fade-up">
            <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-blue-50 border border-blue-200 text-blue-600 text-xs font-extrabold uppercase tracking-widest mb-8 dark:bg-blue-900/30 dark:border-blue-500/20 dark:text-blue-400 backdrop-blur-sm">
                <span class="w-2 h-2 rounded-full bg-blue-600 animate-pulse"></span>
                Programa de Partners
            </span>
          </div>
          
          <h1 class="max-w-4xl mx-auto text-5xl md:text-7xl lg:text-8xl font-black tracking-tighter text-slate-900 dark:text-white mb-8 leading-[0.95] animate-fade-up animation-delay-100">
             Haz crecer <br /> tu <span class="text-transparent bg-clip-text bg-gradient-to-br from-blue-600 to-indigo-500">Negocio</span>
          </h1>

          <p class="max-w-2xl mx-auto text-xl md:text-2xl text-slate-500 dark:text-slate-400 font-light leading-relaxed mb-12 animate-fade-up animation-delay-200">
              Conviértete en un punto de venta oficial Telcel. Tecnología, comisiones y respaldo en una sola plataforma.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-up animation-delay-300">
             <Button 
               href="https://wa.me/529616189200?text=Quiero%20ser%20Asociado" 
               variant="primary"
               size="lg"
               class="group gap-3"
             >
                <span class="relative">Unirme Ahora</span>
                <svg class="w-5 h-5 relative transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
             </Button>
             <Button 
               onclick="document.getElementById('features').scrollIntoView({behavior: 'smooth'})" 
               variant="secondary"
               size="lg"
               class="text-blue-600 border-blue-200 hover:bg-blue-50"
             >
                 Conocer Beneficios
             </Button>
          </div>
      </div>
  </section>

  <!-- STATS QUICK VIEW (Prueba Social) -->
  <section class="py-16 border-y border-slate-100  dark:border-white/5 dark:from-slate-900 dark:to-slate-950">
      <div class="container mx-auto px-4">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center divide-x divide-slate-200 dark:divide-white/5">
              <div class="animate-fade-up">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">+10k</p>
                  <p class="text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Socios Activos</p>
              </div>
              <div class="animate-fade-up animation-delay-100">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">99%</p>
                  <p class="text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Uptime</p>
              </div>
              <div class="animate-fade-up animation-delay-200">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">24/7</p>
                  <p class="text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Soporte Real</p>
              </div>
              <div class="animate-fade-up animation-delay-300">
                  <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">0%</p>
                  <p class="text-xs font-bold uppercase tracking-wider text-slate-400 mt-2">Costo Inicial</p>
              </div>
          </div>
      </div>
  </section>
</div>
  <!-- BENTO FEATURES -->
  <section id="features" class="py-24  border-t border-slate-100 dark:border-white/5">
      <div class="container mx-auto px-4 max-w-7xl">
         
         <div class="text-center mb-16 max-w-3xl mx-auto">
             <h2 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-6">Plataforma diseñada para vender</h2>
             <p class="text-slate-500 text-lg">Te damos las herramientas de una gran corporación en tu bolsillo. Simple, rápido y seguro.</p>
         </div>

         <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
             {beneficios.map((item, idx) => (
                 <div class="group relative p-8 rounded-[2rem] bg-white dark:bg-slate-900 border border-slate-100 dark:border-slate-800 shadow-lg shadow-slate-200/50 dark:shadow-black/20 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                     <!-- Hover Gradient -->
                     <div class="absolute inset-0 rounded-[2rem] bg-gradient-to-br from-blue-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 dark:from-blue-900/10 pointer-events-none"></div>

                     <div class="relative z-10 flex items-start gap-6">
                        <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-2xl bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
                            <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.icon} /></svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{item.titulo}</h3>
                            <p class="text-sm leading-relaxed text-slate-500 dark:text-slate-400">{item.descripcion}</p>
                        </div>
                     </div>
                 </div>
             ))}
         </div>
      </div>
  </section>

  <!-- PORTFOLIO SLIDER (Horizontal Scroll Snap) -->
  <section
    class="py-24 px-6 bg-white dark:bg-slate-900 border-t border-slate-100 dark:border-white/5"
  >
     <div class="container mx-auto px-4 mb-12 flex items-end justify-between">
         <div class="max-w-xl">
             <h2 class="text-3xl font-bold text-slate-900 dark:text-white">Expande tu Catálogo</h2>
             <p class="mt-2 text-slate-500">No te limites. Ofrece una gama completa de soluciones digitales.</p>
         </div>
         <!-- Desktop arrows indicator -->
         <div class="hidden md:flex gap-2">
            <div class="h-1 w-16 rounded-full bg-slate-200 dark:bg-slate-700"></div>
            <div class="h-1 w-8 rounded-full bg-blue-500"></div>
         </div>
     </div>

     <!-- Cards Scroll Container -->
     <div class="flex gap-6 overflow-x-auto pb-12 px-4 md:px-12 snap-x snap-mandatory scrollbar-hide">
         {catalogo.map((cat, index) => (
            <div class="relative min-w-[300px] md:min-w-[380px] h-[480px] rounded-[2rem] overflow-hidden snap-center group shadow-md hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
                <!-- Image -->
                <div class="absolute inset-0">
                    <img src={cat.img} alt={cat.title} class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale-[0.3] group-hover:grayscale-0" loading="lazy"/>
                    <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent opacity-80 group-hover:opacity-70 transition-opacity duration-500"></div>
                </div>

                <!-- Content Bottom -->
                <div class="absolute bottom-0 left-0 p-8 w-full z-10">
                    <div class={`w-10 h-1 mb-4 rounded-full bg-gradient-to-r ${cat.bgClass} group-hover:w-16 transition-all duration-300`}></div>
                    <h3 class="text-3xl font-bold text-white mb-2 leading-tight">{cat.title}</h3>
                    <p class="text-slate-200 font-medium mb-6 opacity-90">{cat.subtitle}</p>
                    
                    <span class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white text-xs font-bold uppercase tracking-wider group-hover:bg-white group-hover:text-slate-900 transition-all duration-300">
                        Ver Detalles <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                    </span>
                </div>
            </div>
         ))}
         
         <!-- CTA Final Card en el Scroll -->
         <div class="relative min-w-[300px] md:min-w-[350px] h-[450px] rounded-[2.5rem] overflow-hidden snap-center bg-blue-600 flex flex-col items-center justify-center text-center p-8 text-white shadow-xl hover:shadow-blue-600/40 hover:scale-[1.02] transition-all">
              <div class="w-20 h-20 rounded-full bg-white/20 flex items-center justify-center mb-6 animate-pulse">
                  <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
              </div>
              <h3 class="text-2xl font-bold mb-2">¿Tienes una idea?</h3>
              <p class="text-blue-50 mb-8">Si tienes un negocio diferente, también tenemos una solución.</p>
              <Button href="https://wa.me/529616189200" variant="secondary" class="bg-white text-blue-600 hover:bg-blue-50 border-transparent shadow-none">Hablemos</Button>
         </div>
     </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-24  text-white text-center relative overflow-hidden">
      <div class="container relative z-10 px-4 mx-auto max-w-3xl">
          <h2 class="text-3xl md:text-5xl font-bold mb-8 tracking-tight">Listo para escalar tu negocio?</h2>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
               <Button href="https://wa.me/529616189200" variant="primary" size="lg">Registrarme Gratis</Button>
          </div>
      </div>
  </section>

</BaseLayout>

<style>
  /* Utilería para scroll horizontal oculto */
  .scrollbar-hide::-webkit-scrollbar {
      display: none;
  }
  .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
  }

  /* Animations */
  @keyframes fade-up {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-up {
    animation: fade-up 0.8s ease-out forwards;
    opacity: 0; /* Start invisible */
  }
  .animation-delay-100 { animation-delay: 100ms; }
  .animation-delay-200 { animation-delay: 200ms; }
  .animation-delay-300 { animation-delay: 300ms; }
</style>