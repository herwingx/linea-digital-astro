---
// src/pages/asociados.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/user.css";
---

<BaseLayout
  title="Asociados - Grupo Linea Digital"
  description="Secci칩n exclusiva para asociados de Grupo Linea Digital."
>
  <section
    class="relative h-screen py-24 overflow-hidden min-h-[60vh] flex items-center"
  >
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <div class="mb-8 flex justify-center animate-fade-up">
          <span
