---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import gridManImage from "../assets/grid-man-image-compress.webp";
import "../styles/user.css";
import Testimonials from "../components/Testimonials.astro";
import Button from "../components/ui/Button.astro";
---

<BaseLayout
  title="Grupo Linea Digital"
  description="Tienda especializada en telefonía celular Telcel, lo último en Smartphones, sistema de prepago, planes Telcel, Internet móvil y servicios empresariales."
>
  <!-- HERO SECTION -->
  <!-- UX: Padding responsivo amplio y overflow-hidden para evitar scrollbars por efectos de luz -->
  <section
    class="relative w-full md:pb-32 transition-colors duration-500 overflow-hidden"
  >
    <!-- Grid sutil de fondo para textura -->
    <div
      class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] opacity-[0.4] dark:opacity-[0.1]"
    >
    </div>

    <div class="relative z-10 mx-auto max-w-7xl px-6 text-center md:px-8">
      <!-- Badge con Micro-interacción -->
      <div
        class="animate-fade-up mb-8 flex justify-center"
        style="animation-duration: 0.6s;"
      >
        <span
          class="inline-flex items-center gap-2 rounded-full border border-blue-200/60 bg-white/60 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-blue-700 backdrop-blur-md transition-all hover:scale-105 hover:bg-white/80 dark:border-blue-500/20 dark:bg-blue-900/20 dark:text-blue-300 cursor-default shadow-sm"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-2 w-2 bg-blue-500 dark:bg-blue-400"
            ></span>
          </span>
          Innovación & Conectividad
        </span>
      </div>

      <!-- Título con Kerning Ajustado y Alto Contraste -->
<h1 class="text-4xl sm:text-5xl md:text-6xl font-black tracking-tighter leading-[0.95] text-slate-900 dark:text-white mb-8">
        Soluciones en Telefonía. <br />
        <!-- Gradiente de texto que funciona en Light y Dark -->
        <span class="text-blue-600 dark:text-blue-400 font-bold">
          El futuro es ahora.
        </span>
      </h1>

      <!-- Subtítulo Legible -->
      <p
        class="mx-auto mb-12 max-w-2xl text-lg leading-relaxed text-slate-600 dark:text-slate-400 md:text-xl"
      >
        Tienda especializada en telefonía celular Telcel. Conectamos tu vida con
        los últimos Smartphones, planes a medida y servicios empresariales de
        alto nivel.
      </p>

      <!-- CTA Buttons (Pill Design) -->
      <!-- A11y: focus:ring para navegación por teclado -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <Button
          href="/personas"
          variant="primary"
          size="lg"
          class="group gap-2"
        >
          Ver Planes Personales
          <svg
            class="w-4 h-4 transition-transform group-hover:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
          >
        </Button>
        <Button
          href="/empresas"
          variant="secondary"
          size="lg"
          class="text-blue-600 border-blue-200 hover:bg-blue-50"
        >
          Empresas
        </Button>
      </div>
    </div>
  </section>

  <!-- FEATURES SECTION -->
  <section
    class="relative pt-8 pb-8 md:pt-16 md:pb-32 px-6 overflow-hidden transition-colors duration-500"
  >
    <div class="mx-auto max-w-7xl">
      <div
        class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center"
      >
        <!-- Text Content -->
        <div class="relative z-10 order-2 lg:order-1 text-center lg:text-left">
          <div class="inline-block mb-4">
            <span
              class="text-xs font-bold uppercase tracking-[0.2em] text-blue-600 dark:text-blue-400"
