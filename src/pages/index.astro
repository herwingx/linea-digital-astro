                  <stop offset="100%" style="stop-color:#00A3E0;stop-opacity:1"></stop>
                </linearGradient>
              </defs>
              <path d="M50 350 Q 200 50, 350 200" fill="none" stroke="url(#glow-grad)" stroke-linecap="round" stroke-width="2"></path>
              <path d="M350 50 Q 150 350, 50 150" fill="none" stroke="url(#glow-grad)" stroke-dasharray="4 8" stroke-linecap="round" stroke-width="2"></path>
            </svg>
            <div class="absolute top-8 left-8 w-16 h-16 border-2 border-[#00A3E0]/50 rounded-full"></div>
            <div class="absolute bottom-10 right-10 w-24 h-24 bg-[#00A3E0]/10 backdrop-blur-sm rounded-lg rotate-12"></div>
            <div class="absolute top-1/2 left-1/4 -translate-y-1/2 w-4 h-4 bg-[#00A3E0] rounded-full"></div>
            <div class="absolute bottom-1/4 right-1/3 w-3 h-3 bg-[#002A5C] rounded-full"></div>
            <img src="/yellow-man-compress-compress.webp" alt="Persona usando smartphone" class="relative z-10 w-2/3 h-auto object-contain" />
          </div>
        </div>
      </div>
    </div>
  </section>

