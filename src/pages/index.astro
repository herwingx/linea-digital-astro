---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import gridManImage from "../assets/grid-man-image-compress.webp";
import "../styles/user.css";
import Testimonials from "../components/Testimonials.astro";
---

<BaseLayout
  title="Grupo Linea Digital"
  description="Tienda especializada en telefonía celular Telcel, lo último en Smartphones, sistema de prepago, planes Telcel, Internet móvil y servicios empresariales."
>
  <section
    class="relative flex items-center justify-center min-h-[60vh] md:min-h-[500px] py-20 px-4 overflow-hidden"
  >
    <!-- Contenedor principal centrado -->
    <div class="relative z-10 text-center max-w-4xl mx-auto animate-fade-up">
      <!-- Título principal -->
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 leading-tight">
        Soluciones en Telefonía. <br class="hidden md:block" /> El futuro es ahora.
      </h1>
      <!-- Subtítulo -->
      <p class="text-lg md:text-xl mb-8">
        Tienda especializada en telefonía celular Telcel, lo último en
        Smartphones, sistema de prepago, planes Telcel, Internet móvil y
        servicios empresariales.
      </p>
      <!-- Contenedor de botones -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="bg-blue-700 px-8 py-3 rounded-lg font-semibold hover:bg-blue-700/80 transition-colors duration-300 text-white"
        >
          Ver Planes Móviles
        </a>
        <a
          href="/"
          class="border-2 dark:text-white border-blue-700/80 px-8 py-3 rounded-lg font-semibold hover:bg-blue-700/80 hover:border-blue-700/80 hover:text-white transition-colors duration-300 text-blue-700"
        >
          Ver Internet en Casa
        </a>
      </div>
    </div>
  </section>
  <section class="py-20 sm:py-28 px-4">
    <div
      class="container mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
    >
      <!-- Columna Izquierda: Contenido de Texto -->
      <div class="text-center lg:text-left">
        <h2 class="text-4xl md:text-5xl font-extrabold mb-6 leading-tight">
          Distribuidor Autorizado <br /> Telcel
        </h2>
        <p class="text-lg leading-relaxed max-w-xl mx-auto lg:mx-0">
          Línea Digital es un distribuidor autorizado Telcel en México, contamos
          con los equipos más modernos, además de los mejores planes Telcel que
          te mantendrán conectado 24/7. Tenemos presencia en varios estados de
          la república, puedes visitar nuestras sucursales si lo prefieres;
          contáctanos al 961 618 92 00 y aprovecha nuestras promociones de
          temporada.
        </p>
        <div class="mt-10">
          <a
            href="/promociones"
            class="inline-block bg-blue-700 px-8 py-3 rounded-full font-semibold hover:bg-blue-600/80 hover:text-white transition-colors duration-300 text-white shadow-lg shadow-blue-700/20"
          >
            Descubre nuestras promociones
          </a>
        </div>
      </div>
      <!-- Columna Derecha: Elementos Gráficos Decorativos -->
      <div
        class="relative hidden lg:flex items-center justify-center min-h-[250px]"
      >
        <Image
          src={gridManImage}
          alt="Hombre sosteniendo un telefono"
          class="w-full max-w-lg mx-auto z-10 relative"
          loading="eager"
          id="phone-image"
          fetchpriority="high"
          sizes="(min-width: 500px) 50vw, 100vw"
        />
        <!-- Fondo de resplandor azul -->
        <div
          class="absolute w-80 h-80 bg-blue-700/20 rounded-full blur-3xl -translate-x-10"
        >
        </div>
        <!-- Línea horizontal -->
        <div class="absolute w-3/4 h-px bg-gray-700 top-1/3"></div>
        <!-- Círculo contorneado -->
        <div
          class="absolute left-0 top-1/3 -translate-y-1/2 w-20 h-20 border-2 border-blue-700 rounded-full"
        >
        </div>
        <!-- Cuadrado rotado semi-transparente -->
        <div
          class="absolute right-12 top-0 w-28 h-28 bg-blue-700/10 rounded-xl transform rotate-12"
        >
        </div>
        <!-- Punto azul en la línea -->
        <div
          class="absolute left-1/3 top-1/3 -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-blue-700 rounded-full"
        >
        </div>
        <!-- Punto blanco en la línea -->
        <div
          class="absolute left-2/3 top-1/3 -translate-x-1/2 -translate-y-1/2 w-3 h-3 bg-slate-400 rounded-full dark:bg-white"
        >
        </div>
      </div>
    </div>
  </section>
  <section class="py-16 sm:py-24 px-4 sm:px-8">
    <div class="max-w-6xl mx-auto w-full">
      <div class="flex flex-col items-center text-center gap-4 mb-12">
        <h2
          class="text-3xl sm:text-4xl font-bold leading-tight tracking-tighter"
        >
          Nuestras Sucursales
        </h2>
        <p class="text-base sm:text-lg max-w-2xl font-normal leading-normal">
          Visítanos en cualquiera de nuestras ubicaciones. Estaremos encantados
          de atenderte.
        </p>
      </div>

      <script>
        // Inicializar el estado activo
        let activeMap = 'tuxtla';
        
        function showMap(location: string) {
          // Ocultar todos los mapas
          const maps = document.querySelectorAll('.location-map');
          for (let i = 0; i < maps.length; i++) {
            maps[i].classList.add('hidden');
          }
          
          // Mostrar el mapa seleccionado
          const selectedMap = document.getElementById(location + '-map');
          if (selectedMap) {
            selectedMap.classList.remove('hidden');
          }
          
          // Actualizar el estado activo
          activeMap = location;
          
          // Actualizar estilos de las tarjetas
          const cards = document.querySelectorAll('.location-card');
          for (let i = 0; i < cards.length; i++) {
            const card = cards[i];
            if (card.getAttribute('data-location') === location) {
              card.classList.add('border-blue-600', 'dark:border-blue-600/50');
              card.classList.remove('border-gray-200', 'dark:border-white/10');
            } else {
              card.classList.remove('border-blue-600', 'dark:border-blue-600/50');
              card.classList.add('border-gray-200', 'dark:border-white/10');
            }
          }
        }
        
        // Hacer la función accesible globalmente
        window.showMap = showMap;
        
        // Inicializar el mapa por defecto al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
          showMap('tuxtla');
          
          // Agregar event listeners a las tarjetas
          const cards = document.querySelectorAll('.location-card');
          cards.forEach((card) => {
            card.addEventListener('click', () => {
              const location = card.getAttribute('data-location');
              if (location) {
                showMap(location);
              }
            });
          });
        });
      </script>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 w-full">
        <div class="flex flex-col gap-6">
          <!-- Sucursal Tuxtla -->
          <div
            class="location-card flex flex-col gap-4 border dark:border-white/10 dark:bg-slate-800 p-6 rounded-xl hover:border-blue-600/50 transition-colors duration-300 cursor-pointer"
            data-location="tuxtla"
            onclick="showMap('tuxtla')"
          >
            <div class="flex items-center gap-4">
              <div
                class="flex shrink-0 items-center justify-center w-12 h-12 rounded-lg bg-blue-600/20"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-blue-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold">Corporativo Tuxtla</h3>
            </div>
            <div class="flex flex-col gap-4 pl-2">
              <div class="flex items-start gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 mt-0.5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <p class="text-base font-normal leading-normal">
                  1a Avenida Norte Poniente #834, Centro, CP 29000 Tuxtla
                  Gutiérrez, Chiapas
                </p>
              </div>
              <div class="flex items-center gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                <p class="text-base font-normal leading-normal">
                  Tel: 961 618 92 00
                </p>
              </div>
              <div class="flex items-center gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="text-base font-normal leading-normal">
                  Lunes a Viernes: 9:00 AM - 6:00 PM
                </p>
              </div>
            </div>
          </div>

          <!-- Sucursal Tapachula -->
          <div
            class="location-card flex flex-col gap-4 border dark:border-white/10 dark:bg-slate-800 p-6 rounded-xl hover:border-blue-600/50 transition-colors duration-300 cursor-pointer"
            data-location="tapachula"
            onclick="showMap('tapachula')"
          >
            <div class="flex items-center gap-4">
              <div
                class="flex shrink-0 items-center justify-center w-12 h-12 rounded-lg bg-blue-600/20"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-blue-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold">Corporativo Tapachula</h3>
            </div>
            <div class="flex flex-col gap-4 pl-2">
              <div class="flex items-start gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 mt-0.5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <p class="text-base font-normal leading-normal">
                  4a. Av. Nte. 70, Los Naranjos, Centro, 30700 Tapachula de
                  Córdova y Ordóñez, Chis.
                </p>
              </div>
              <div class="flex items-center gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                <p class="text-base font-normal leading-normal">
                  Tel: 962 625 58 10
                </p>
              </div>
              <div class="flex items-center gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="text-base font-normal leading-normal">
                  Lunes a Viernes: 9:00 AM - 6:00 PM
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Mapa -->
        <div class="relative w-full h-full min-h-[400px] lg:min-h-full">
          <!-- Mapa de Tuxtla -->
          <div id="tuxtla-map" class="location-map w-full h-full rounded-xl overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3820.4196777143943!2d-93.1224185!3d16.7557832!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85ecd8f3d3af5e09%3A0xedacab470275254a!2sLinea%20Digital%20del%20Sureste!5e0!3m2!1ses-419!2smx!4v1741478607844!5m2!1ses-419!2smx"
              width="100%"
              height="100%"
              style="border:0; min-height: 400px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="rounded-xl border border-white/10"></iframe>
          </div>
          
          <!-- Mapa de Tapachula -->
          <div id="tapachula-map" class="location-map w-full h-full rounded-xl overflow-hidden hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3855.4472567510143!2d-92.2621971!3d14.912154999999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x858e0ed8913f73ad%3A0xab0ea708b27df293!2sL%C3%ADnea%20Digital%20del%20Sureste%20Tapachula!5e0!3m2!1sen!2smx!4v1763676826030!5m2!1sen!2smx"
              width="100%"
              height="100%"
              style="border:0; min-height: 400px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="rounded-xl border border-white/10"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
  <Testimonials />
</BaseLayout>
