  <Testimonials />

  <!-- LOGICA UX MEJORADA -->
  <script>
    // TypeScript: Extend Window interface to include our custom function
    declare global {
      interface Window {
        showMap: (location: string) => void;
      }
    }

    // Gestión de Estado de Interfaz (UI State)
    let activeLocation = "tuxtla";

    function updateMapDisplay(locationId: string) {
      // 1. Ocultar/Mostrar iframes con transición suave (Fade)
      // Nota: Usamos z-index y opacity para evitar recargar el iframe
      const maps = ["tuxtla-map", "tapachula-map"];

      maps.forEach((mapId) => {
        const el = document.getElementById(mapId);
        if (el) {
          if (mapId === locationId + "-map") {
            el.style.opacity = "1";
            el.style.zIndex = "10";
            el.style.pointerEvents = "auto";
          } else {
            el.style.opacity = "0";
            el.style.zIndex = "0";
            el.style.pointerEvents = "none";
          }
        }
      });
    }

    function updateCardStyles(selectedLocation: string) {
      // Clases base para tarjetas inactivas
      // Light: bg-white border-slate-200 | Dark: bg-slate-900 border-white/10
      const baseClasses = [
        "border-slate-200",
        "bg-white",
        "dark:border-white/10",
        "dark:bg-slate-900",
      ];

      // Clases para tarjeta activa (Highlight Design System)
      // Light: ring azul, fondo azul claro | Dark: ring azul, fondo azul/10
      const activeClasses = [
        "ring-2",
        "ring-blue-500",
        "bg-blue-50/40",
        "dark:bg-blue-500/10",
        "dark:border-transparent",
        "border-blue-200",
      ];

      const cards = document.querySelectorAll(".location-card");

      cards.forEach((card) => {
        const loc = card.getAttribute("data-location");
        const indicator = card.querySelector(".card-active-indicator");

        if (loc === selectedLocation) {
          // Aplicar Activo
          card.classList.add(...activeClasses);
          card.classList.remove(
            "border-slate-200",
            "bg-white",
            "dark:border-white/10",
            "dark:bg-slate-900",
          );
          if (indicator) (indicator as HTMLElement).style.opacity = "1";
          card.setAttribute("aria-selected", "true");
        } else {
          // Aplicar Inactivo
          card.classList.remove(...activeClasses);
          card.classList.add(
            "border-slate-200",
            "bg-white",
            "dark:border-white/10",
            "dark:bg-slate-900",
          );
          if (indicator) (indicator as HTMLElement).style.opacity = "0";
          card.setAttribute("aria-selected", "false");
        }
      });
    }

    function showMap(location: string) {
      if (activeLocation === location) return;
      activeLocation = location;
      updateMapDisplay(location);
      updateCardStyles(location);
    }

    // Inicialización
    document.addEventListener("DOMContentLoaded", () => {
      // Exponer función a window (necesario para el onclick en HTML)
      window.showMap = showMap;

