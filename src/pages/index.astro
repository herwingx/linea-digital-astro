              class="rounded-[2rem] w-full max-w-md mx-auto object-cover bg-slate-100 dark:bg-slate-800"
              loading="eager"
              id="phone-image"
            />
            <!-- Glass Highlight overlay -->
            <div
              class="absolute inset-0 rounded-[2.5rem] ring-1 ring-inset ring-black/5 dark:ring-white/10 pointer-events-none"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

