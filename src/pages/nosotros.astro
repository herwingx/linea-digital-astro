const VALUES = [
  { 
    title: "Fe", 
    desc: "Promover nuestra capacidad para alcanzar retos a trav칠s de la confianza en nuestro Creador, sustento de nuestra filosof칤a.", 
    icon: "M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" 
  },
  { 
    title: "Unidad", 
    desc: "Fomentar el trabajo en equipo, el compa침erismo y la buena comunicaci칩n como pilares de nuestra familia laboral.", 
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z" 
  },
  { 
    title: "Respeto", 
    desc: "Tratar a toda persona con dignidad, tolerancia y cortes칤a, sin distinci칩n de nivel social o ideolog칤a.", 
    icon: "M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
  },
  { 
    title: "Integridad", 
    desc: "Actuar intachablemente, siendo dignos de confianza y de una sola pieza. Principios s칩lidos para una productividad 칠tica.", 
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" 
  }
];
---

<BaseLayout
  title="Nuestra Esencia | Grupo L칤nea Digital"
  description="M치s de 25 a침os conectando a M칠xico con valores s칩lidos, tecnolog칤a de punta y el respaldo de la red Telcel."
>
  
  <!-- BACKGROUND GLOBAL (Deep Navy) -->
  <div class="fixed inset-0 pointer-events-none opacity-[0.3] dark:opacity-[0.1] z-0">
      <svg class="w-full h-full mix-blend-overlay"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.8" numOctaves="3" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(#noise)"/></svg>
  </div>

  <!-- === HERO SECTION: MAPA & COBERTURA === -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="container relative z-10 mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        
        <!-- COLUMNA TEXTO -->
        <div class="text-center lg:text-left animate-fade-in-up">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-blue-50 border border-blue-200/60 dark:bg-blue-900/20 dark:border-blue-500/20 mb-8 backdrop-blur-sm">
            <span class="w-2 h-2 rounded-full bg-blue-600 dark:bg-blue-400 animate-pulse"></span>
            <span class="text-xs font-bold uppercase tracking-widest text-blue-700 dark:text-blue-300">Distribuidor Autorizado Telcel</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black tracking-tighter leading-[0.95] text-slate-900 dark:text-white mb-6">
            L칤deres en <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-300">
              Conectividad Regional
            </span>
          </h1>

          <p class="text-lg md:text-xl leading-relaxed text-slate-600 dark:text-slate-300 mb-10 max-w-xl mx-auto lg:mx-0">
            Con m치s de <span class="font-bold text-slate-900 dark:text-white">25 a침os de trayectoria</span>, no solo vendemos tecnolog칤a; construimos la infraestructura comercial que mantiene conectado al sureste de M칠xico.
          </p>

          <!-- Botones/Badges est치ticos -->
          <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
            <div class="flex items-center gap-3 px-5 py-3 rounded-2xl bg-white border border-slate-200 shadow-sm dark:bg-[#151e2e] dark:border-white/10">
              <span class="text-2xl">游쓇릖</span>
              <div class="flex flex-col text-left">
                  <span class="text-[10px] font-bold uppercase text-slate-400">Origen</span>
                  <span class="text-sm font-bold text-slate-900 dark:text-white">100% Mexicanos</span>
              </div>
            </div>
            <div class="flex items-center gap-3 px-5 py-3 rounded-2xl bg-white border border-slate-200 shadow-sm dark:bg-[#151e2e] dark:border-white/10">
              <span class="text-2xl">游니</span>
              <div class="flex flex-col text-left">
                  <span class="text-[10px] font-bold uppercase text-slate-400">Red</span>
                  <span class="text-sm font-bold text-slate-900 dark:text-white">5G Ready</span>
              </div>
            </div>
          </div>
        </div>

        <!-- COLUMNA VISUAL (MAPA INTERACTIVO) -->
        <div class="lg:order-first relative group perspective-1000">
          <!-- Glass Container -->
          <div class="relative rounded-[2.5rem] bg-white/80 dark:bg-[#151e2e]/80 border border-white/60 dark:border-white/10 shadow-2xl shadow-blue-900/10 dark:shadow-black/40 p-3 transition-shadow duration-700">
            <div class="rounded-[2rem] overflow-hidden bg-slate-50 dark:bg-[#0B1120] relative aspect-[1.47] w-full">
               
               <VectorMapWrapper />
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- === STATS STRIP (KPIs Reales) === -->
  <section class="py-16 border-y border-slate-200 dark:border-white/5 bg-slate-50 dark:bg-[#0f1520]">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 divide-x divide-slate-200/50 dark:divide-white/5">
        
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-black text-blue-600 dark:text-blue-400 tracking-tight mb-1">
            <AnimatedCounter end={25} prefix="+" duration={2000} />
          </div>
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">A침os de Experiencia</p>
        </div>

        <div class="text-center">
          <div class="text-4xl md:text-5xl font-black text-slate-900 dark:text-white tracking-tight mb-1">
            <AnimatedCounter end={500} suffix="k" duration={2500} />
          </div>
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Usuarios Conectados</p>
        </div>

        <div class="text-center">
          <div class="text-4xl md:text-5xl font-black text-slate-900 dark:text-white tracking-tight mb-1">
            <AnimatedCounter end={100} prefix="+" duration={2000} />
          </div>
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Empresas Aliadas</p>
        </div>

        <div class="text-center">
          <div class="text-4xl md:text-5xl font-black text-emerald-500 tracking-tight mb-1">
            #1
          </div>
          <p class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">En el Sureste</p>
        </div>

      </div>
    </div>
  </section>

  <!-- === BRAND MARQUEE (Efecto Infinito - Retail Power) === -->
  <section class="py-20 overflow-hidden bg-white dark:bg-[#0B1120] relative">
      <div class="container mx-auto px-6 text-center mb-12">
          <span class="text-blue-600 dark:text-blue-400 font-bold uppercase tracking-widest text-xs">Ecosistema Tecnol칩gico</span>
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white mt-2">Las mejores marcas del mundo</h2>
      </div>

      <!-- Marquee Wrapper -->
      <div class="relative w-full flex overflow-hidden mask-gradient">
          <div class="flex animate-marquee whitespace-nowrap py-4">
              {[...BRANDS, ...BRANDS].map((brand, index) => (
                  <div class="mx-8 md:mx-12 flex items-center justify-center grayscale hover:grayscale-0 opacity-50 hover:opacity-100 transition-all duration-500 cursor-default">
                      <img 
                        src={brand.logo} 
                        alt={brand.name} 
                        class="h-12 w-auto max-w-[120px] object-contain dark:invert dark:brightness-200" 
                        loading="lazy"
                      />
                  </div>
              ))}
          </div>
      </div>
  </section>

  <!-- === FILOSOF칈A & VALORES (Deep Dive) === -->
  <section class="relative py-24 md:py-32 overflow-hidden bg-slate-50 dark:bg-[#0f1520] transition-colors duration-500">
    
    <!-- Decoraci칩n de Fondo (Part칤culas) -->
    <div id="particles-container" class="absolute inset-0 pointer-events-none opacity-40"></div>

    <div class="container mx-auto px-6 max-w-7xl relative z-10">
      
      <div class="text-center max-w-3xl mx-auto mb-20">
        <span class="inline-block py-1.5 px-4 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-[10px] font-bold uppercase tracking-widest mb-6 border border-blue-200 dark:border-blue-500/20">
          ADN Corporativo
        </span>
        <h2 class="text-3xl md:text-5xl font-black text-slate-900 dark:text-white mb-6 tracking-tight">
          Evolucionando <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-300">Contigo.</span>
        </h2>
        <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 leading-relaxed">
          Creemos en la <span class="font-bold text-blue-600 dark:text-blue-400">inclusi칩n financiera</span> y en democratizar la tecnolog칤a. Reinventamos la forma de conectar personas haci칠ndolo f치cil, r치pido y humano.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-start">
        
        <!-- VISUAL: SISTEMA SOLAR DE VALORES -->
        <div class="lg:col-span-5 flex justify-center sticky top-24">
          <div class="relative w-[300px] h-[300px] md:w-[450px] md:h-[450px]">
            <!-- Orbitas CSS -->
            <div class="absolute inset-0 flex items-center justify-center opacity-30 dark:opacity-20">
               <div class="w-[100%] h-[100%] rounded-full border border-slate-400 dark:border-white animate-[spin_60s_linear_infinite]"></div>
               <div class="absolute w-[70%] h-[70%] rounded-full border border-dashed border-slate-400 dark:border-white animate-[spin_40s_linear_infinite_reverse]"></div>
            </div>

            <!-- N칰cleo -->
            <div class="absolute inset-0 flex items-center justify-center">
               <div class="w-32 h-32 rounded-full bg-gradient-to-br from-blue-600 to-indigo-700 flex items-center justify-center shadow-[0_0_60px_rgba(37,99,235,0.4)] relative z-10">
                  <svg class="w-14 h-14 text-white drop-shadow-md" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
               </div>
            </div>
            
            <!-- Planetas (Valores) -->
            <div class="absolute inset-0 animate-[spin_60s_linear_infinite]">
               <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-4 bg-white dark:bg-slate-800 p-2 rounded-full shadow-lg border border-slate-100 dark:border-slate-700">
                  <div class="w-4 h-4 bg-blue-500 rounded-full"></div>
               </div>
               <div class="absolute bottom-1/4 right-0 bg-white dark:bg-slate-800 p-2 rounded-full shadow-lg border border-slate-100 dark:border-slate-700">
                  <div class="w-3 h-3 bg-cyan-400 rounded-full"></div>
               </div>
            </div>
          </div>
        </div>

        <!-- GRID DE TARJETAS DE VALORES -->
        <div class="lg:col-span-7 grid grid-cols-1 sm:grid-cols-2 gap-5">
           {VALUES.map((val, i) => (
             <div class="group relative overflow-hidden rounded-[2rem] bg-white dark:bg-[#151e2e] p-8 border border-slate-100 dark:border-white/5 shadow-sm hover:shadow-2xl hover:shadow-blue-900/10 transition-all duration-300 hover:-translate-y-1">
                
                <!-- Icono -->
                <div class="w-12 h-12 rounded-2xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-6 group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={val.icon} /></svg>
                </div>

                <!-- Contenido -->
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3">{val.title}</h3>
                <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed font-medium">
                    {val.desc}
                </p>

                <!-- Borde animado inferior -->
                <div class="absolute bottom-0 left-0 w-0 h-1 bg-gradient-to-r from-blue-500 to-cyan-400 group-hover:w-full transition-all duration-500 ease-out"></div>
             </div>
           ))}
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<script>
  // Inicializaci칩n de part칤culas ambientales
  function initParticles() {
    const container = document.getElementById("particles-container");
    if (!container) return;
    container.innerHTML = '';

    const count = window.innerWidth < 768 ? 10 : 25;

    for (let i = 0; i < count; i++) {
      const p = document.createElement("div");
      p.className = "absolute rounded-full bg-blue-500/20 dark:bg-blue-400/10 blur-sm animate-float";
      
      const size = Math.random() * 10 + 4; 
      p.style.width = `${size}px`;
      p.style.height = `${size}px`;
      p.style.left = `${Math.random() * 100}%`;
      p.style.top = `${Math.random() * 100}%`;
      p.style.animationDuration = `${Math.random() * 20 + 10}s`;
      p.style.animationDelay = `${Math.random() * -20}s`;
      
      container.appendChild(p);
    }
  }

  document.addEventListener("astro:page-load", initParticles);
  document.addEventListener("DOMContentLoaded", initParticles);
</script>

<style>
  /* Animaci칩n Marquee Infinito */
  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-marquee {
    animation: marquee 40s linear infinite;
  }
  .animate-marquee:hover {
    animation-play-state: paused;
  }

  /* M치scara de desvanecimiento para el marquee */
  .mask-gradient {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }

  /* Animaci칩n de flotaci칩n para part칤culas */
  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(20px, -20px); }
  }
  .animate-float {
    animation-name: float;
    animation-timing-function: ease-in-out;
    animation-iteration-count: infinite;
  }

  .perspective-1000 { perspective: 1000px; }
  .rotate-y-1 { transform: rotateY(1deg); }
  
  .animate-bounce-slow { animation: bounce 3s infinite; }
  
  /* Utiler칤a Fade Up */
  @keyframes fade-in-up {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in-up {
      animation: fade-in-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      opacity: 0;
  }
</style>