<script>
  // Inicializaci칩n de part칤culas ambientales
  function initParticles() {
    const container = document.getElementById("particles-container");
    if (!container) return;
    container.innerHTML = '';

    const count = window.innerWidth < 768 ? 10 : 25;

    for (let i = 0; i < count; i++) {
      const p = document.createElement("div");
      
      // Alternar entre las dos animaciones
      const useAltAnimation = i % 2 === 0;
      const animationName = useAltAnimation ? 'float-alt' : 'float';
      
      p.className = `absolute rounded-full bg-blue-500/70 dark:bg-blue-400/70`;
      
      const size = Math.random() * 15 + 6; 
      const duration = Math.random() * 15 + 10;
      const delay = Math.random() * -20;
      
      p.style.cssText = `
        width: ${size}px;
        height: ${size}px;
        left: ${Math.random() * 100}%;
        top: ${Math.random() * 100}%;
        animation: ${animationName} ${duration}s ease-in-out infinite;
        animation-delay: ${delay}s;
        will-change: transform, opacity;
      `;
      
      container.appendChild(p);
    }
  }

  document.addEventListener("astro:page-load", initParticles);
  document.addEventListener("DOMContentLoaded", initParticles);
</script>

<style>
  /* Animaci칩n Marquee Infinito */
  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-marquee {
    animation: marquee 40s linear infinite;
  }
  .animate-marquee:hover {
    animation-play-state: paused;
  }

  /* M치scara de desvanecimiento para el marquee */
  .mask-gradient {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }

  /* Animaci칩n de flotaci칩n para part칤culas */
  @keyframes float {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    25% { 
      transform: translate(30px, -30px) scale(1.2);
      opacity: 0.6;
    }
    50% { 
      transform: translate(60px, -15px) scale(0.8);
      opacity: 0.4;
    }
    75% { 
      transform: translate(30px, 15px) scale(1.1);
      opacity: 0.5;
    }
  }
  
  @keyframes float-alt {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    33% { 
      transform: translate(-40px, 25px) scale(1.3);
      opacity: 0.7;
    }
    66% { 
      transform: translate(-20px, -35px) scale(0.9);
      opacity: 0.5;
    }
  }
  
  /* Clases de utilidad para 3D */
  .perspective-1000 { perspective: 1000px; }
  .rotate-y-1 { transform: rotateY(1deg); }
  
  .animate-bounce-slow { animation: bounce 3s infinite; }
  
  /* Utiler칤a Fade Up */
  @keyframes fade-in-up {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in-up {
      animation: fade-in-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      opacity: 0;
  }
</style>