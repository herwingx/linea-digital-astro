import BaseLayout from "../layouts/BaseLayout.astro";
import AnimatedCounter from "../components/AnimatedCounter.astro";
import VectorMapWrapper from "../components/VectorMapWrapper.astro";
import "../styles/user.css";

// === DATOS CORPORATIVOS ===
const BRANDS = [
  { name: "Telcel", logo: "https://upload.wikimedia.org/wikipedia/commons/8/8e/Telcel_logo.svg" },
  { name: "Apple", logo: "https://cdn.worldvectorlogo.com/logos/apple-13.svg" },
  { name: "Samsung", logo: "https://cdn.worldvectorlogo.com/logos/samsung-8.svg" },
  { name: "Xiaomi", logo: "https://cdn.worldvectorlogo.com/logos/xiaomi-3.svg" },
  { name: "Motorola", logo: "https://cdn.worldvectorlogo.com/logos/motorola-new-logo.svg" },
  { name: "Huawei", logo: "https://cdn.worldvectorlogo.com/logos/huawei.svg" },
  { name: "Honor", logo: "https://cdn.worldvectorlogo.com/logos/honor-2.svg" },
  { name: "Oppo", logo: "https://cdn.worldvectorlogo.com/logos/oppo-mobile-logo.svg" },
