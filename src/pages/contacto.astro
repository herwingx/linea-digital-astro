---
// src/pages/form.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";
---

<BaseLayout
  title="Contáctanos - Grupo Linea Digital"
  description="Ponte en contacto con nosotros para resolver tus dudas sobre telefonía y tecnología."
>
  <!-- Contenedor Principal con Fondo Decorativo -->
  <main
    class="relative min-h-screen w-full overflow-hidden transition-colors duration-500"
  >
    <div class="container relative z-10 mx-auto px-4 sm:px-6">
      <!-- Header -->
      <div class="mx-auto mb-12 max-w-2xl text-center">
        <span
          class="inline-flex items-center gap-2 rounded-full border border-blue-200 bg-blue-50/50 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-blue-600 backdrop-blur-sm dark:border-blue-500/20 dark:bg-blue-900/10 dark:text-blue-400"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
            ></span>
          </span>
          Centro de Contacto
        </span>
        <h1
          class="mt-6 text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl md:text-6xl"
        >
          Hablemos de tu <br /><span
            class="bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent"
            >Próximo Proyecto</span
          >
        </h1>
<p class="mb-10 text-lg md:text-xl leading-relaxed text-slate-500 dark:text-slate-400">
          Ya sea que busques un plan empresarial o renovar tu equipo, estamos
          listos para asesorarte.
        </p>
      </div>

      <!-- Área de Mensajes de Respuesta (Toast Style) -->
      <div id="response-messages" class="mx-auto max-w-4xl mb-8"></div>

      <!-- Unified Card Container -->
      <div
        class="mx-auto grid max-w-6xl grid-cols-1 overflow-hidden rounded-[2.5rem] border border-slate-200 bg-white/80 shadow-2xl shadow-slate-200/50 dark:border-white/10 dark:bg-slate-900/80 dark:shadow-black/50 lg:grid-cols-5 backdrop-blur-md"
      >
        <!-- LEFT COLUMN: CONTACT INFO (Style: Sidebar Bento) -->
        <!-- Ocupa 2/5 del espacio en desktop -->
        <div
          class="relative bg-slate-50/60 p-10 backdrop-blur-xl lg:col-span-2 lg:p-12 dark:bg-slate-800/40 border-b lg:border-b-0 lg:border-r border-slate-100 dark:border-white/5"
        >
          <h2
            class="mb-8 text-2xl md:text-3xl font-bold tracking-tight text-slate-900 dark:text-white"
          >
            Información Directa
          </h2>

          <div class="flex flex-col gap-8">
            <!-- Ubicación Block -->
            <div
              class="group flex items-start gap-4 rounded-2xl p-4 transition-colors hover:bg-white hover:shadow-sm hover:shadow-slate-200/50 dark:hover:bg-white/5 dark:hover:shadow-none"
            >
              <div
                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-blue-50 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                >
              </div>
              <div>
                <h3 class="text-xl md:text-2xl font-bold text-slate-900 dark:text-white mb-3">Dirección</h3>
                <p
                  class="mt-1 text-sm leading-relaxed text-slate-500 dark:text-slate-400"
                >
                  1a Avenida Norte Poniente #834, Centro.<br />CP 29000, Tuxtla
                  Gutiérrez.
                </p>
              </div>
            </div>

            <!-- Email Block -->
            <div
              class="group flex items-start gap-4 rounded-2xl p-4 transition-colors hover:bg-white hover:shadow-sm hover:shadow-slate-200/50 dark:hover:bg-white/5 dark:hover:shadow-none"
            >
              <div
                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-blue-50 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path></svg
                >
              </div>
              <div>
                <h3 class="text-xl md:text-2xl font-bold text-slate-900 dark:text-white mb-3">Correo Electrónico</h3>
                <div
                  class="mt-1 flex flex-col gap-1 text-sm text-slate-500 dark:text-slate-400"
                >
                  <a
                    href="mailto:info@linea-digital.com"
                    class="hover:text-blue-600 transition-colors"
                    >info@linea-digital.com</a
                  >
                  <a
                    href="mailto:ventas@linea-digital.com"
                    class="hover:text-blue-600 transition-colors"
                    >ventas@linea-digital.com</a
                  >
                </div>
              </div>
            </div>

            <!-- WhatsApp CTA Block (Updated) -->
            <div
              class="mt-auto rounded-3xl bg-white p-6 shadow-sm ring-1 ring-slate-100 dark:bg-white/5 dark:ring-white/10"
            >
              <h3 class="text-xl md:text-2xl font-bold text-slate-900 dark:text-white mb-3">¿Respuesta Inmediata?</h3>
              <p class="mb-4 text-sm text-slate-500 dark:text-slate-400">
                Escríbenos directo a nuestro equipo de soporte.
              </p>

              <Button
                href="https://wa.me/529616189200"
                target="_blank"
                class="w-full gap-2 bg-green-600 text-white hover:bg-green-500 shadow-green-600/20 border-transparent"
                size="md"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                  ><path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.548 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                  ></path></svg
                >
                <span>Escribir al WhatsApp</span>
              </Button>
            </div>
          </div>
        </div>

        <!-- RIGHT COLUMN: FORM (Style: Clean White) -->
        <div
          class="relative bg-white p-10 lg:col-span-3 lg:p-16 dark:bg-slate-900"
        >
          <h2
            class="mb-6 text-2xl md:text-3xl font-bold tracking-tight text-slate-900 dark:text-white"
          >
            Envíanos un mensaje
          </h2>

          <form id="contact-form" class="space-y-6">
            <!-- Grid para inputs cortos -->
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div class="space-y-2">
                <label
                  for="name"
                  class="block text-xs font-bold uppercase tracking-wide text-slate-500 dark:text-slate-400"
                >
                  Nombre Completo
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full rounded-2xl border-none bg-slate-50 px-4 py-3 text-slate-900 placeholder-slate-400 ring-1 ring-inset ring-slate-200 transition-all focus:bg-white focus:ring-2 focus:ring-blue-500 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:placeholder-slate-600 dark:focus:ring-blue-500"
                  placeholder="Ej. Juan Pérez"
                />
              </div>

              <div class="space-y-2">
                <label
                  for="phone"
                  class="block text-xs font-bold uppercase tracking-wide text-slate-500 dark:text-slate-400"
                >
                  Teléfono
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full rounded-2xl border-none bg-slate-50 px-4 py-3 text-slate-900 placeholder-slate-400 ring-1 ring-inset ring-slate-200 transition-all focus:bg-white focus:ring-2 focus:ring-blue-500 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:placeholder-slate-600 dark:focus:ring-blue-500"
                  placeholder="+52 ..."
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                for="email"
                class="block text-xs font-bold uppercase tracking-wide text-slate-500 dark:text-slate-400"
              >
                Correo Electrónico
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded-2xl border-none bg-slate-50 px-4 py-3 text-slate-900 placeholder-slate-400 ring-1 ring-inset ring-slate-200 transition-all focus:bg-white focus:ring-2 focus:ring-blue-500 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:placeholder-slate-600 dark:focus:ring-blue-500"
                placeholder="ejemplo@correo.com"
              />
            </div>

            <div class="space-y-2">
              <label
                for="message"
                class="block text-xs font-bold uppercase tracking-wide text-slate-500 dark:text-slate-400"
              >
                ¿Cómo podemos ayudarte?
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full resize-none rounded-2xl border-none bg-slate-50 px-4 py-3 text-slate-900 placeholder-slate-400 ring-1 ring-inset ring-slate-200 transition-all focus:bg-white focus:ring-2 focus:ring-blue-500 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:placeholder-slate-600 dark:focus:ring-blue-500"
                placeholder="Cuéntanos los detalles..."></textarea>
            </div>

            <div class="pt-4">
              <Button
                type="submit"
                variant="primary"
                size="lg"
                class="w-full sm:w-auto"
              >
                <span>Enviar Mensaje</span>
                <svg
                  class="ml-2 -mr-1 h-5 w-5"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"
                  ></path>
                </svg>
              </Button>
            </div>

            <p class="text-center text-xs text-slate-400 sm:text-left">
              Protegemos tus datos. Al enviar este formulario aceptas nuestra
              política de privacidad.
            </p>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("contact-form") as HTMLFormElement;
      const responseMessages = document.getElementById("response-messages");

      if (form) {
        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          const formData = new FormData(form);
          const data = Object.fromEntries(formData.entries());
          const submitButton = form.querySelector(
            'button[type="submit"]',
          ) as HTMLButtonElement;

          // Clear previous messages
          if (responseMessages) {
            responseMessages.innerHTML = "";
          }

          if (submitButton) {
            // Micro-interacción: botón loading state
            const originalContent = submitButton.innerHTML;
            submitButton.disabled = true;
            submitButton.innerHTML = `<svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>`;

            // Mantener el botón deshabilitado temporalmente
            setTimeout(async () => {
              try {
                const response = await fetch("/api/send-email", {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json",
                  },
                  body: JSON.stringify(data),
                });

                const result = await response.json();

                if (!response.ok) {
                  throw new Error(result.error || "Error al enviar el mensaje");
                }

                // ESTILO MODERNO PARA ÉXITO
                const successMessage = document.createElement("div");
                successMessage.className =
                  "flex items-center gap-3 bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-[1.5rem] shadow-sm animate-fade-up";
                successMessage.innerHTML = `
                        <div class="flex h-8 w-8 items-center justify-center rounded-full bg-green-100 text-green-600"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg></div>
                        <div><span class="font-bold">¡Enviado!</span> ${result.message}</div>
                    `;

                if (responseMessages) {
                  responseMessages.appendChild(successMessage);
                }

                form.reset();
                window.scrollTo({ top: 0, behavior: "smooth" });
              } catch (error) {
                // ESTILO MODERNO PARA ERROR
                const errorMessage = document.createElement("div");
                errorMessage.className =
                  "flex items-center gap-3 bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-[1.5rem] shadow-sm animate-fade-up";
                errorMessage.innerHTML = `
                        <div class="flex h-8 w-8 items-center justify-center rounded-full bg-red-100 text-red-600"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg></div>
                        <div><span class="font-bold">Error:</span> ${error instanceof Error ? error.message : "Hubo un problema técnico."}</div>
                    `;

                if (responseMessages) {
                  responseMessages.appendChild(errorMessage);
                }
                window.scrollTo({ top: 0, behavior: "smooth" });
              } finally {
                submitButton.disabled = false;
                submitButton.innerHTML = `<span>Enviar Mensaje</span><svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>`;
              }
            }, 600); // Pequeño delay para que la animación se vea suave
          }
        });
      }
    });
  </script>
</BaseLayout>
