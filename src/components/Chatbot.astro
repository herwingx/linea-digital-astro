---
// src/components/Chatbot.astro
import "../styles/user.css"; // Asegura que tus estilos base est茅n disponibles

/**
 * Componente de Chatbot con IA
 * Refactorizado para UX/UI Premium (Modern Clean Design)
 * L贸gica preservada 100%
 */
---

<div id="chatbot-container" class="fixed z-[9999] font-sans">
  <!-- BOTN FLOTANTE (FAB) -->
  <!-- Dise帽o Jewel: Sombra de color difusa y bordes suaves -->
  <button
    id="chatbot-toggle"
    class="chatbot-fab group fixed bottom-5 right-5 sm:bottom-6 sm:right-6 flex h-14 w-14 sm:h-16 sm:w-16 items-center justify-center rounded-full bg-blue-600 text-white shadow-2xl shadow-blue-600/40 transition-all duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)] hover:-translate-y-1 hover:scale-110 hover:shadow-blue-600/50 active:scale-95 z-[10000]"
    aria-label="Abrir asistente"
    type="button"
  >
    <!-- Ripple Effect decorativo -->
    <span
      class="absolute inset-0 rounded-full border border-white/20 opacity-0 transition-opacity group-hover:opacity-100"
    ></span>

    <!-- Icono Chat (Scale transition) -->
    <svg
      class="chatbot-icon-chat absolute h-6 w-6 sm:h-7 sm:w-7 transition-all duration-300 group-hover:rotate-[-10deg]"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
      ></path>
    </svg>

    <!-- Icono Close (Scale & Rotate transition) -->
    <svg
      class="chatbot-icon-close absolute h-5 w-5 sm:h-6 sm:w-6 rotate-90 scale-50 opacity-0 transition-all duration-300"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2.5"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>

    <!-- Badge -->
    <span
      id="chatbot-badge"
      class="chatbot-badge absolute -right-1 -top-1 flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-[10px] font-bold text-white ring-2 ring-white dark:ring-slate-900 transition-transform"
    >
      1
    </span>
  </button>

  <!-- VENTANA DEL CHAT -->
  <div
    id="chatbot-window"
    class="chatbot-window fixed bottom-24 right-4 sm:right-6 flex pointer-events-none h-[650px] max-h-[calc(100dvh-120px)] w-full max-w-[380px] flex-col overflow-hidden rounded-[2.5rem] bg-white shadow-2xl shadow-slate-900/20 opacity-0 translate-y-8 scale-95 transition-all duration-500 cubic-bezier(0.16, 1, 0.3, 1) dark:bg-slate-900 dark:shadow-black/60 dark:ring-1 dark:ring-white/10"
  >
    <!-- HEADER (Glassmorphism con Gradiente) -->
    <div
      class="relative flex flex-shrink-0 items-center justify-between bg-slate-900/5 px-6 py-5 backdrop-blur-xl dark:bg-slate-800/50 border-b border-slate-100/50 dark:border-white/5"
    >
      <!-- Gradient bg aesthetic -->
      <div
        class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/5 opacity-50 pointer-events-none"
      >
      </div>

      <div class="relative flex items-center gap-4 z-10">
        <div class="relative">
          <div
            class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 text-white shadow-lg"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
            >
          </div>
          <!-- Status dot -->
          <span
            class="absolute bottom-0 right-0 h-3.5 w-3.5 rounded-full border-2 border-white bg-emerald-500 dark:border-slate-900 animate-pulse"
          ></span>
        </div>

        <div class="flex flex-col">
          <h3
            class="text-base font-bold text-slate-800 dark:text-white leading-none"
          >
            Asistente IA
          </h3>
          <span
            class="mt-1 text-[11px] font-medium text-blue-600 dark:text-blue-400 tracking-wide"
            >L铆nea Digital</span
          >
        </div>
      </div>

      <!-- Bot贸n minimizar (Ghost) -->
      <button
        id="chatbot-minimize"
        class="relative z-10 flex h-8 w-8 items-center justify-center rounded-full text-slate-400 transition-colors hover:bg-slate-200/50 hover:text-slate-600 dark:hover:bg-white/10 dark:hover:text-white"
        type="button"
        aria-label="Cerrar"
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"></path></svg
        >
      </button>
    </div>

    <!-- REA DE MENSAJES (Limpia) -->
    <div
      id="chatbot-messages"
      class="flex flex-1 flex-col gap-4 overflow-y-auto bg-slate-50 p-5 scroll-smooth dark:bg-slate-950/50 scrollbar-thin scrollbar-track-transparent scrollbar-thumb-slate-200 dark:scrollbar-thumb-slate-700"
    >
      <!-- Welcome Msg -->
      <div
        class="chatbot-message chatbot-message-bot flex animate-slide-up flex-col items-start max-w-[85%]"
      >
        <div
          class="rounded-2xl rounded-tl-sm bg-white px-4 py-3.5 text-[14px] leading-relaxed text-slate-700 shadow-sm ring-1 ring-slate-900/5 dark:bg-slate-800 dark:text-slate-200 dark:ring-white/10 dark:shadow-none"
        >
           隆Hola! Soy tu asistente virtual.<br />
          驴Te ayudo a encontrar tu plan ideal?
        </div>
        <span class="ml-1 mt-1 text-[10px] font-medium text-slate-400"
          >Ahora mismo</span
        >
      </div>
    </div>

    <!-- QUICK REPLIES & INPUT (Footer Flotante) -->
    <div
      class="flex flex-shrink-0 flex-col gap-3 border-t border-slate-100 bg-white px-5 pt-3 pb-5 dark:bg-slate-900 dark:border-slate-800 z-20"
    >
      <!-- Quick Replies Scroll -->
      <div
        id="chatbot-quick-replies"
        class="scrollbar-hide -mx-5 flex gap-2 overflow-x-auto px-5 py-1 pb-2"
      >
        <!-- JS injects buttons here with styling classes below -->
        <!-- Ejemplo visual para dise帽o (JS los genera): 
              <button class="shrink-0 rounded-full border border-blue-100 bg-blue-50/50 px-3 py-1.5 text-xs font-semibold text-blue-600 transition hover:bg-blue-100 dark:border-blue-900/30 dark:bg-blue-900/20 dark:text-blue-300">
                   Ver Planes
              </button> 
              -->
      </div>

      <!-- Input Wrapper Pill -->
      <form
        id="chatbot-form"
        class="relative flex items-center gap-2 rounded-full bg-slate-100 p-1.5 pr-2 focus-within:ring-2 focus-within:ring-blue-500/20 transition-all dark:bg-slate-950/50 border border-transparent focus-within:border-blue-200 dark:border-slate-800 dark:focus-within:border-blue-500"
      >
        <input
          id="chatbot-input"
          type="text"
          class="w-full bg-transparent px-4 py-2.5 text-sm text-slate-900 placeholder:text-slate-400 focus:outline-none dark:text-white"
          placeholder="Escribe aqu铆..."
          autocomplete="off"
          maxlength="250"
        />

        <button
          id="chatbot-send-btn"
          type="submit"
          disabled
          class="flex h-9 w-9 flex-shrink-0 items-center justify-center rounded-full bg-blue-600 text-white shadow-sm transition-all hover:scale-105 hover:bg-blue-500 disabled:cursor-not-allowed disabled:opacity-50 disabled:bg-slate-300 dark:disabled:bg-slate-700"
        >
          <svg
            class="ml-0.5 h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2.5"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg
          >
        </button>
      </form>

      <!-- Footer brand tiny -->
      <p class="text-center text-[10px] text-slate-400 dark:text-slate-600">
        Powered by <span class="font-bold">L铆nea Digital AI</span>
      </p>
    </div>
  </div>
</div>

<script>
  import { ChatbotClient } from "../lib/chatbot-client";

  // Inicializamos el cliente si estamos en el navegador
  if (typeof window !== "undefined") {
    new ChatbotClient();
  }
</script>

<style>
  /* === ANIMACIONES UI === */
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-slide-up {
    animation: slide-up 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* === TRANSICIONES DEL TOGGLE === */
  /* Cuando 'active' est谩 en el bot贸n, cambiamos iconos */
  #chatbot-toggle.active .chatbot-icon-chat {
    opacity: 0;
    transform: scale(0.5) rotate(90deg);
  }
  #chatbot-toggle.active .chatbot-icon-close {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
  #chatbot-toggle.active #chatbot-badge {
    opacity: 0;
    transform: scale(0);
  }

  /* === ESTADO DE VENTANA ABIERTA === */
  #chatbot-window.active {
    display: flex !important; /* Force flex override */
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: auto;
  }

  /* === ESTILO DINMICO DE MENSAJES (Targeteado desde JS classes) === */

  /* Bot Msg */
  .chatbot-message-bot > div {
    @apply rounded-2xl rounded-tl-sm bg-white px-4 py-3 text-sm leading-relaxed text-slate-700 shadow-sm ring-1 ring-slate-200/50 dark:bg-slate-800 dark:text-slate-200 dark:ring-white/10 dark:shadow-none;
  }

  /* User Msg */
  .chatbot-message-user {
    @apply self-end items-end max-w-[85%];
  }
  .chatbot-message-user > div {
    @apply rounded-2xl rounded-br-sm bg-gradient-to-br from-blue-600 to-blue-600 px-4 py-3 text-sm leading-relaxed text-white shadow-md shadow-blue-600/20 border border-transparent dark:from-blue-600 dark:to-blue-600;
  }

  /* === SCROLLBAR INVISIBLE EN QUICK REPLIES === */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* === QUICK REPLIES BUTTONS (Estilo inyectado a botones din谩micos) === */
  /* El JS usa la clase .chatbot-quick-reply, redefinimos aqui con @apply */
  .chatbot-quick-reply {
    @apply flex-shrink-0 rounded-xl border border-slate-200 bg-white px-3 py-1.5 text-xs font-semibold text-slate-600 transition-all duration-200 hover:-translate-y-0.5 hover:border-blue-200 hover:bg-blue-50 hover:text-blue-600 hover:shadow-sm dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 dark:hover:text-blue-400;
  }

  /* === TYPING DOTS (Animaci贸n de carga) === */
  .typing-dot {
    animation: typing 1.4s infinite ease-in-out both;
  }
  .typing-dot:nth-child(1) {
    animation-delay: -0.32s;
  }
  .typing-dot:nth-child(2) {
    animation-delay: -0.16s;
  }

  @keyframes typing {
    0%,
    80%,
    100% {
      transform: scale(0);
    }
    40% {
      transform: scale(1);
    }
  }

  /* === MOBILE OVERRIDES === */
  @media (max-width: 640px) {
    /* Ocultar FAB cuando el chat est谩 abierto en m贸vil */
    .chatbot-fab.active {
      opacity: 0;
      pointer-events: none;
      transform: scale(0.8);
    }

    #chatbot-window {
      @apply fixed top-0 bottom-0 right-0 left-0 w-full max-w-full rounded-none shadow-[0_-10px_40px_rgba(0,0,0,0.1)];
      height: 100dvh;
      max-height: 100dvh;
      transform: translateY(100%) scale(1); /* Oculto abajo, sin escala */
      padding-bottom: 0;
      /* Prevenir deformaci贸n durante transiciones */
      will-change: transform;
      backface-visibility: hidden;
    }

    #chatbot-window.active {
      transform: translateY(0) scale(1);
    }

    #chatbot-window.keyboard-open {
      /* Mantener estable durante cambios de teclado */
      transition: none; /* Desactivar transici贸n durante ajuste de teclado */
    }

    /* Ajuste de z-index para sobreponerse al footer m贸vil si existe */
    #chatbot-container {
      z-index: 10001;
    }
  }
</style>
