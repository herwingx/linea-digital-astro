---
// src/components/Chatbot.astro
/**
 * Componente de Chatbot con IA
 *
 * Widget flotante que permite a los usuarios interactuar
 * con el asistente virtual de L√≠nea Digital.
 */
---

<div id="chatbot-container" class="chatbot-container">
  <!-- Bot√≥n flotante (FAB) -->
  <button
    id="chatbot-toggle"
    class="chatbot-fab"
    aria-label="Abrir chat de asistencia"
    type="button"
  >
    <!-- Icono de chat -->
    <svg
      class="chatbot-icon chatbot-icon-chat"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
      ></path>
    </svg>

    <!-- Icono de cerrar -->
    <svg
      class="chatbot-icon chatbot-icon-close"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>

    <!-- Badge de notificaci√≥n -->
    <span class="chatbot-badge" id="chatbot-badge">1</span>
  </button>

  <!-- Ventana de chat -->
  <div id="chatbot-window" class="chatbot-window">
    <!-- Header -->
    <div class="chatbot-header">
      <div class="chatbot-header-info">
        <div class="chatbot-avatar">
          <svg fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"
            ></path>
            <circle cx="12" cy="10" r="1.5"></circle>
            <circle cx="8" cy="10" r="1.5"></circle>
            <circle cx="16" cy="10" r="1.5"></circle>
          </svg>
        </div>
        <div class="chatbot-header-text">
          <h3 class="chatbot-title">Asistente Virtual</h3>
          <p class="chatbot-status">
            <span class="chatbot-status-dot"></span>
            En l√≠nea
          </p>
        </div>
      </div>
      <button
        id="chatbot-minimize"
        class="chatbot-minimize-btn"
        aria-label="Minimizar chat"
        type="button"
      >
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    </div>

    <!-- √Årea de mensajes -->
    <div id="chatbot-messages" class="chatbot-messages">
      <!-- Mensaje de bienvenida -->
      <div class="chatbot-message chatbot-message-bot">
        <div class="chatbot-message-content">
          ¬°Hola! üëã Soy tu asistente virtual de L√≠nea Digital.<br /><br />
          ¬øEn qu√© puedo ayudarte hoy?
        </div>
        <span class="chatbot-message-time">Ahora</span>
      </div>
    </div>

    <!-- Respuestas r√°pidas -->
    <div id="chatbot-quick-replies" class="chatbot-quick-replies">
      <button
        class="chatbot-quick-reply"
        data-message="¬øCu√°les son sus planes m√≥viles?"
        type="button"
      >
        üì± Ver planes
      </button>
      <button
        class="chatbot-quick-reply"
        data-message="¬øD√≥nde est√°n ubicados?"
        type="button"
      >
        üìç Ubicaci√≥n
      </button>
      <button
        class="chatbot-quick-reply"
        data-message="¬øCu√°l es su horario de atenci√≥n?"
        type="button"
      >
        üïê Horario
      </button>
    </div>

    <!-- Input de mensaje -->
    <form id="chatbot-form" class="chatbot-input-container">
      <input
        type="text"
        id="chatbot-input"
        class="chatbot-input"
        placeholder="Escribe tu mensaje..."
        autocomplete="off"
        maxlength="500"
        aria-label="Mensaje del chat"
      />
      <button
        type="submit"
        class="chatbot-send-btn"
        aria-label="Enviar mensaje"
        id="chatbot-send-btn"
      >
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
        </svg>
      </button>
    </form>
  </div>
</div>

<style is:global>
  /* === VARIABLES === */
  :root {
    --chatbot-primary: #2563eb;
    --chatbot-primary-dark: #1d4ed8;
    --chatbot-primary-light: #3b82f6;
    --chatbot-bg: #ffffff;
    --chatbot-text: #1e293b;
    --chatbot-text-light: #64748b;
    --chatbot-border: #e2e8f0;
    --chatbot-shadow: rgba(0, 0, 0, 0.1);
    --chatbot-message-bg: #f8fafc;
    --chatbot-user-message: #2563eb;
    --chatbot-bot-message: #ffffff;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --chatbot-bg: #1e293b;
      --chatbot-text: #f1f5f9;
      --chatbot-text-light: #94a3b8;
      --chatbot-border: #334155;
      --chatbot-shadow: rgba(0, 0, 0, 0.3);
      --chatbot-message-bg: #0f172a;
      --chatbot-bot-message: #334155;
    }
  }

  /* === CONTAINER === */
  .chatbot-container {
    position: fixed;
    z-index: 9999;
  }

  /* === FAB BUTTON === */
  .chatbot-fab {
    position: fixed;
    bottom: 24px;
    right: 24px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--chatbot-primary) 0%,
      var(--chatbot-primary-dark) 100%
    );
    border: none;
    box-shadow: 0 8px 24px rgba(37, 99, 235, 0.4);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 10000;
  }

  .chatbot-fab:hover {
    transform: scale(1.1);
    box-shadow: 0 12px 32px rgba(37, 99, 235, 0.5);
  }

  .chatbot-fab:active {
    transform: scale(0.95);
  }

  .chatbot-icon {
    width: 28px;
    height: 28px;
    color: white;
    transition: all 0.3s;
  }

  .chatbot-icon-close {
    display: none;
  }

  .chatbot-fab.active .chatbot-icon-chat {
    display: none;
  }

  .chatbot-fab.active .chatbot-icon-close {
    display: block;
  }

  .chatbot-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    background: #ef4444;
    color: white;
    font-size: 12px;
    font-weight: 700;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid white;
    animation: chatbot-badge-pulse 2s infinite;
  }

  .chatbot-badge.hidden {
    display: none;
  }

  @keyframes chatbot-badge-pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* === CHAT WINDOW === */
  .chatbot-window {
    position: fixed;
    bottom: 100px;
    right: 24px;
    width: 400px;
    max-width: calc(100vw - 48px);
    height: 600px;
    max-height: calc(100vh - 140px);
    background: var(--chatbot-bg);
    border-radius: 24px;
    box-shadow: 0 20px 60px var(--chatbot-shadow);
    display: none;
    flex-direction: column;
    opacity: 0;
    transform: translateY(20px) scale(0.95);
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 9999;
    overflow: hidden;
  }

  .chatbot-window.active {
    display: flex;
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: all;
  }

  /* === HEADER === */
  .chatbot-header {
    background: linear-gradient(
      135deg,
      var(--chatbot-primary) 0%,
      var(--chatbot-primary-dark) 100%
    );
    color: white;
    padding: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-shrink: 0;
  }

  .chatbot-header-info {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .chatbot-avatar {
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .chatbot-avatar svg {
    width: 24px;
    height: 24px;
  }

  .chatbot-header-text {
    flex: 1;
  }

  .chatbot-title {
    font-size: 16px;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
  }

  .chatbot-status {
    font-size: 12px;
    margin: 4px 0 0;
    display: flex;
    align-items: center;
    gap: 6px;
    opacity: 0.9;
  }

  .chatbot-status-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: chatbot-pulse 2s infinite;
  }

  @keyframes chatbot-pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .chatbot-minimize-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
    flex-shrink: 0;
  }

  .chatbot-minimize-btn:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .chatbot-minimize-btn svg {
    width: 20px;
    height: 20px;
    color: white;
  }

  /* === MESSAGES === */
  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    background: #1a2332;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .chatbot-messages::-webkit-scrollbar {
    width: 6px;
  }

  .chatbot-messages::-webkit-scrollbar-track {
    background: transparent;
  }

  .chatbot-messages::-webkit-scrollbar-thumb {
    background: var(--chatbot-border);
    border-radius: 3px;
  }

  .chatbot-message {
    display: flex;
    flex-direction: column;
    max-width: 75%;
    animation: chatbot-message-slide 0.3s ease-out;
    margin-bottom: 8px;
  }

  @keyframes chatbot-message-slide {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chatbot-message-bot {
    align-self: flex-start;
  }

  .chatbot-message-user {
    align-self: flex-end;
  }

  .chatbot-message-content {
    padding: 12px 16px;
    border-radius: 18px;
    font-size: 14px;
    line-height: 1.5;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Mensajes del bot - Estilo limpio */
  .chatbot-message-bot .chatbot-message-content {
    background: #3a4a5c;
    color: #ffffff;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  /* Mensajes del usuario - Estilo azul */
  .chatbot-message-user .chatbot-message-content {
    background: #0084ff;
    color: #ffffff;
    box-shadow: 0 1px 2px rgba(0, 132, 255, 0.3);
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .chatbot-message-bot .chatbot-message-content {
      background: #3a4a5c;
      color: #ffffff;
    }

    .chatbot-message-user .chatbot-message-content {
      background: #0084ff;
      color: #ffffff;
    }
  }

  .chatbot-message-time {
    font-size: 11px;
    color: var(--chatbot-text-light);
    margin-top: 4px;
    padding: 0 8px;
  }

  /* === MARKDOWN STYLES === */
  .chatbot-message-content p {
    margin: 0;
    padding: 0;
  }

  .chatbot-message-content p + p {
    margin-top: 8px;
  }

  .chatbot-message-content strong {
    font-weight: 700;
    color: #ffffff;
  }

  .chatbot-message-content em {
    font-style: italic;
  }

  .chatbot-message-content :global(.chatbot-list) {
    margin: 8px 0;
    padding-left: 20px;
    list-style: none;
  }

  .chatbot-message-content :global(.chatbot-list li) {
    position: relative;
    margin: 4px 0;
    padding-left: 8px;
  }

  .chatbot-message-content :global(.chatbot-list li::before) {
    content: "‚Ä¢";
    position: absolute;
    left: -12px;
    color: #ffffff;
    font-weight: bold;
  }

  /* === TYPING INDICATOR === */
  .chatbot-typing {
    display: flex;
    gap: 4px;
    padding: 12px 16px;
    background: var(--chatbot-bot-message);
    border-radius: 16px;
    border-bottom-left-radius: 4px;
    width: fit-content;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .chatbot-typing span {
    width: 8px;
    height: 8px;
    background: var(--chatbot-text-light);
    border-radius: 50%;
    animation: chatbot-typing 1.4s infinite;
  }

  .chatbot-typing span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .chatbot-typing span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes chatbot-typing {
    0%,
    60%,
    100% {
      transform: translateY(0);
    }
    30% {
      transform: translateY(-10px);
    }
  }

  /* === QUICK REPLIES === */
  .chatbot-quick-replies {
    padding: 12px 20px;
    display: flex;
    gap: 8px;
    overflow-x: auto;
    background: var(--chatbot-bg);
    border-top: 1px solid var(--chatbot-border);
    flex-shrink: 0;
  }

  .chatbot-quick-replies::-webkit-scrollbar {
    height: 4px;
  }

  .chatbot-quick-replies::-webkit-scrollbar-thumb {
    background: var(--chatbot-border);
    border-radius: 2px;
  }

  .chatbot-quick-reply {
    padding: 8px 16px;
    background: var(--chatbot-message-bg);
    border: 1px solid var(--chatbot-border);
    border-radius: 20px;
    font-size: 13px;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.2s;
    color: var(--chatbot-text);
  }

  .chatbot-quick-reply:hover {
    background: #e0e7ff;
    border-color: var(--chatbot-primary);
    color: var(--chatbot-primary);
  }

  /* === INPUT === */
  .chatbot-input-container {
    padding: 16px 20px;
    background: var(--chatbot-bg);
    border-top: 1px solid var(--chatbot-border);
    display: flex;
    gap: 12px;
    flex-shrink: 0;
    position: relative;
    z-index: 10;
  }

  .chatbot-input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid var(--chatbot-border);
    border-radius: 24px;
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s;
    background: var(--chatbot-bg);
    color: var(--chatbot-text);
  }

  .chatbot-input:focus {
    border-color: var(--chatbot-primary);
  }

  .chatbot-input::placeholder {
    color: var(--chatbot-text-light);
  }

  .chatbot-send-btn {
    width: 44px;
    height: 44px;
    background: var(--chatbot-primary);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    flex-shrink: 0;
  }

  .chatbot-send-btn:hover:not(:disabled) {
    background: var(--chatbot-primary-dark);
    transform: scale(1.05);
  }

  .chatbot-send-btn:active:not(:disabled) {
    transform: scale(0.95);
  }

  .chatbot-send-btn svg {
    width: 20px;
    height: 20px;
    color: white;
  }

  .chatbot-send-btn:disabled {
    background: var(--chatbot-border);
    cursor: not-allowed;
    opacity: 0.5;
  }

  /* === MOBILE === */
  @media (max-width: 640px) {
    .chatbot-window {
      bottom: 0;
      right: 0;
      left: 0;
      width: 100%;
      max-width: 100%;
      height: 100vh; /* Fallback */
      height: 100dvh; /* Dynamic Viewport Height para m√≥viles reales */
      max-height: 100dvh;
      border-radius: 0;
      z-index: 10001; /* Asegurar que est√© por encima de todo */
      position: fixed;
    }

    .chatbot-window.active {
      display: flex;
    }

    .chatbot-fab {
      bottom: 20px;
      right: 20px;
      width: 56px;
      height: 56px;
    }

    /* Ocultar el bot√≥n flotante cuando el chat est√° abierto en mobile 
       para que no tape el input ni el bot√≥n de enviar */
    .chatbot-fab.active {
      display: none;
    }

    .chatbot-icon {
      width: 24px;
      height: 24px;
    }

    /* Ajustes de padding para mobile */
    .chatbot-messages {
      padding: 16px;
      gap: 12px;
      /* Asegurar que el √°rea de mensajes tenga scroll cuando el teclado est√© abierto */
      flex: 1 1 auto;
      min-height: 0;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }

    .chatbot-message {
      max-width: 90%;
    }

    .chatbot-message-content {
      padding: 10px 14px;
      font-size: 14px;
    }

    .chatbot-header {
      padding: 16px;
      flex-shrink: 0;
    }

    .chatbot-avatar {
      width: 40px;
      height: 40px;
    }

    .chatbot-avatar svg {
      width: 20px;
      height: 20px;
    }

    .chatbot-title {
      font-size: 15px;
    }

    .chatbot-status {
      font-size: 11px;
    }

    /* INPUT: Sticky para que siempre sea visible */
    .chatbot-input-container {
      padding: 12px 16px;
      /* Agregar padding extra para iOS */
      padding-bottom: max(12px, env(safe-area-inset-bottom));
      position: sticky;
      bottom: 0;
      background: var(--chatbot-bg);
      border-top: 1px solid var(--chatbot-border);
      flex-shrink: 0;
      z-index: 100;
    }

    .chatbot-input {
      padding: 10px 14px;
      font-size: 16px; /* Evita zoom en iOS */
    }

    /* Quick replies tambi√©n sticky */
    .chatbot-quick-replies {
      padding: 10px 16px;
      padding-bottom: max(10px, env(safe-area-inset-bottom));
      position: sticky;
      bottom: 0;
      flex-shrink: 0;
      z-index: 99;
    }

    .chatbot-quick-reply {
      padding: 6px 12px;
      font-size: 12px;
    }

    /* Ajuste adicional para cuando el teclado est√° abierto */
    .chatbot-window.keyboard-open .chatbot-messages {
      padding-bottom: 16px;
    }
  }

  /* === ACCESSIBILITY === */
  @media (prefers-reduced-motion: reduce) {
    .chatbot-fab,
    .chatbot-window,
    .chatbot-message,
    * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>

<script>
  import { ChatbotClient } from "../lib/chatbot-client";

  // El cliente se inicializa autom√°ticamente
</script>
