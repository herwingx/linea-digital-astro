---
// src/components/PromoCard.astro
import { Image } from 'astro:assets';

// Definimos qué datos (props) necesita este componente para funcionar.
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  tag?: string; // El '?' significa que esta etiqueta es opcional.
  endDate: string;
}

const { title, description, imageUrl, tag, endDate } = Astro.props;
---

<div class="card group">
  <div class="image-container">
    <!-- El componente <Image> de Astro optimiza la imagen por nosotros -->
    <Image 
      src={imageUrl} 
      alt={description} 
      width={400} 
      height={300} 
      class="card-image"
    />
    <!-- La etiqueta solo se mostrará si le pasamos el dato 'tag' -->
    {tag && <span class="tag">{tag}</span>}
  </div>
  <div class="content">
    <h3 class="title">{title}</h3>
    <div class="description-container">
      <p class="description line-clamp-3 group-hover:line-clamp-none">{description}</p>
    </div>
    <div class="footer">
      <span class="date">Vigencia: {endDate}</span>
      <span class="cta group-hover:text-blue-500">
        Conoce más &rarr;
      </span>
    </div>
  </div>
</div>

<style>
  .card {
    background-color: white;
    border-radius: 0.5rem; /* 8px */
    overflow: hidden;
    display: flex;
    flex-direction: column;
    border: 1px solid #e5e7eb; /* border-gray-200 */
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%; /* Ensure all cards take full height of their container */
    text-decoration: none;
    color: inherit;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  }
  .image-container {
    position: relative;
    /* Forzamos una proporción de 4:3 */
    aspect-ratio: 4 / 3;
  }
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Asegura que la imagen cubra el espacio sin deformarse */
  }
  .tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background-color: #002A5C; /* Azul corporativo */
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px; /* rounded-full */
    font-size: 0.75rem; /* text-sm */
    font-weight: 600; /* font-semibold */
  }
  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    color: #1f2937; /* text-gray-800 */
  }
  .title {
    font-size: 1.25rem; /* text-xl */
    font-weight: 700; /* font-bold */
    margin-bottom: 0.5rem;
  }
  .description-container {
    min-height: 4.5rem; /* Adjust based on your line-clamp value (3 lines * 1.5 line-height) */
    overflow: hidden;
  }
  .description {
    color: #4b5563; /* text-gray-600 */
    font-size: 0.875rem; /* text-sm */
    line-height: 1.5;
    margin-bottom: 1rem; /* mb-4 */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .group:hover .description {
    -webkit-line-clamp: unset;
  }
  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem; /* text-sm */
    color: #6b7280; /* text-gray-500 */
    border-top: 1px solid #e5e7eb; /* border-t border-gray-200 */
    padding-top: 1rem;
  }
  .cta {
    font-weight: 600; /* font-semibold */
    color: #002A5C;
    transition: color 0.2s ease;
  }
</style>