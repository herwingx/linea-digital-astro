---
// src/components/Newsletter.astro
---

<section class="relative px-4 sm:px-6 lg:px-8 py-12 md:py-20">
  <div
    class="relative mx-auto max-w-7xl overflow-hidden rounded-[2.5rem] bg-[#101623] shadow-2xl shadow-blue-900/20 ring-1 ring-white/5 isolate"
  >
    <!-- 1. FONDO ATMOSFÉRICO (Deep & Clean) -->
    <div class="absolute inset-0 -z-10">
      <!-- Fondo base con ligero degradado -->
      <div
        class="absolute inset-0 bg-gradient-to-br from-[#0B1120] via-[#0B1120] to-[#0f172a]"
      >
      </div>

      <!-- Efecto de Ruido para textura "Premium" -->
      <div
        class="absolute inset-0 opacity-20 mix-blend-overlay"
        style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
      >
      </div>

      <!-- Glow Spots (Iluminación Ambiental) -->
      <div
        class="absolute -top-40 -left-40 w-[600px] h-[600px] bg-blue-600/10 blur-[120px] rounded-full mix-blend-screen pointer-events-none"
      >
      </div>
      <div
        class="absolute -bottom-40 -right-40 w-[500px] h-[500px] bg-cyan-600/10 blur-[120px] rounded-full mix-blend-screen pointer-events-none animate-pulse-slow"
      >
      </div>
    </div>

    <!-- 2. LAYOUT DE CONTENIDO -->
    <div
      class="relative z-10 grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16 p-8 sm:p-12 lg:p-20 items-center"
    >
      <!-- COLUMNA IZQUIERDA: Mensaje de Valor -->
      <div
        class="lg:col-span-7 flex flex-col items-center lg:items-start text-center lg:text-left space-y-8"
      >
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2.5 rounded-full border border-blue-400/30 bg-blue-500/10 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-blue-300 shadow-sm backdrop-blur-md"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
            ></span>
          </span>
          Círculo Linea Digital VIP
        </div>

        <!-- Reemplazo del Texto -->
        <div>
          <h2
            class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tighter text-white leading-[1.05] mb-6"
          >
            Desbloquea precios <br />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-b from-blue-400 to-blue-700 dark:from-blue-400 dark:to-blue-200"
            >
              exclusivos
            </span>
          </h2>

          <p
            class="text-lg leading-relaxed text-slate-300/90 max-w-lg mx-auto lg:mx-0 font-medium"
          >
            Sé el primero en enterarte de <strong class="text-white"
              >Promociones Exclusivas</strong
            >, lanzamientos de Smartphones y bonos de datos ocultos que no
            publicamos en tienda.
          </p>
        </div>

        <!-- Trust Badges Ajustados a Promo -->
        <div
          class="flex flex-wrap justify-center lg:justify-start gap-x-8 gap-y-4 pt-2"
        >
          <div class="flex items-center gap-3 group cursor-default">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-full bg-green-500/10 text-green-400 border border-green-500/20 group-hover:scale-110 transition-transform"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
              >
            </div>
            <span
              class="text-xs font-bold uppercase tracking-wide text-slate-400"
              >Alertas 24h antes</span
            >
          </div>

          <div class="flex items-center gap-3 group cursor-default">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-full bg-blue-500/10 text-blue-400 border border-blue-500/20 group-hover:scale-110 transition-transform"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                ></path></svg
              >
            </div>
            <span
              class="text-xs font-bold uppercase tracking-wide text-slate-400"
              >Cupones</span
            >
          </div>
        </div>
      </div>

      <!-- COLUMNA DERECHA: FORMULARIO (Glass Panel) -->
      <div class="lg:col-span-5 w-full">
        <div class="relative">
          <!-- Efecto de profundidad detrás del form -->
          <div
            class="absolute inset-1 bg-gradient-to-br from-white/5 to-white/0 rounded-3xl blur-sm -z-10"
          >
          </div>

          <form
            id="newsletter-form"
            class="relative rounded-3xl bg-[#1a2333]/40 border border-white/10 backdrop-blur-xl p-6 sm:p-8 transition-all hover:border-white/20 hover:shadow-2xl shadow-black/40"
          >
            <h3
              class="text-white font-bold mb-4 flex items-center gap-2 text-sm"
            >
              <span class="w-1.5 h-1.5 bg-blue-500 rounded-full"></span> Suscripción
              Rápida
            </h3>

            <!-- Email Input Container -->
            <div class="group relative mb-4">
              <div
                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-500 group-focus-within:text-blue-400 transition-colors"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <input
                id="email-address"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="block w-full rounded-xl border-0 bg-black/30 py-4 pl-12 pr-4 text-white placeholder:text-slate-500 focus:ring-2 focus:ring-blue-500/50 focus:bg-black/50 transition-all text-sm sm:leading-6"
                placeholder="tucorreo@empresa.com"
              />
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="flex w-full items-center justify-center gap-2 rounded-xl bg-blue-600 px-4 py-3.5 text-sm font-bold text-white shadow-lg shadow-blue-600/30 transition-all hover:bg-blue-500 hover:scale-[1.02] active:scale-[0.98] disabled:opacity-70 disabled:cursor-not-allowed"
            >
              <span id="btn-text">Quiero Acceso VIP</span>
              <!-- Icono Arrow -->
              <svg
                id="btn-icon"
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2.5"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg
              >

              <!-- Spinner -->
              <svg
                id="btn-spinner"
                class="w-5 h-5 hidden animate-spin text-white/90"
                fill="none"
                viewBox="0 0 24 24"
                ><circle
                  class="opacity-25"
                  cx="12"
                  cy="12"
                  r="10"
                  stroke="currentColor"
                  stroke-width="4"></circle><path
                  class="opacity-75"
                  fill="currentColor"
                  d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path></svg
              >
            </button>

            <!-- Feedback flotante (Absolute position) -->
            <div
              id="newsletter-feedback"
              class="absolute left-0 right-0 -bottom-10 text-center text-xs font-medium min-h-[1.5rem] transition-all duration-500 opacity-0 translate-y-4 pointer-events-none"
            >
            </div>

            <p class="mt-4 text-center text-[10px] text-slate-500">
              Al suscribirte aceptas nuestra política de privacidad.
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-pulse-slow {
    animation: pulse 6s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  @keyframes pulse {
    0%,
    100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.4;
      transform: scale(1.1);
    }
  }
</style>

<script>
  // === LÓGICA JAVASCRIPT INTEGRADA ===
  let isInitialized = false;

  function initNewsletter() {
    // Evitamos reinicializar si ya se cargó en esta sesión de SPA
    if (isInitialized) return;

    const form = document.getElementById("newsletter-form") as HTMLFormElement;
    const feedback = document.getElementById("newsletter-feedback");
    const input = document.getElementById("email-address") as HTMLInputElement;
    const btn = form?.querySelector("button");
    const btnText = document.getElementById("btn-text");
    const btnIcon = document.getElementById("btn-icon");
    const btnSpinner = document.getElementById("btn-spinner");

    // Chequeo de seguridad
    if (!form || !feedback || !btn || !input) return;

    isInitialized = true;

    // Limpiar listeners antiguos para ViewTransitions (Clonación)
    const newForm = form.cloneNode(true) as HTMLFormElement;
    form.parentNode?.replaceChild(newForm, form);

    // Referencias dentro del nuevo formulario clonado
    const newBtn = newForm.querySelector("button");
    const newBtnText = newForm.querySelector("#btn-text");
    const newBtnIcon = newForm.querySelector("#btn-icon");
    const newBtnSpinner = newForm.querySelector("#btn-spinner");
    const newInput = newForm.querySelector(
      "#email-address"
    ) as HTMLInputElement;

    const updateFeedback = (msg: string, success: boolean) => {
      feedback.innerHTML = `<span class="${success ? "text-emerald-400" : "text-red-400"} bg-[#0B1120] px-3 py-1 rounded-full border border-white/10 shadow-xl">${msg}</span>`;
      feedback.classList.remove("opacity-0", "translate-y-4");
      feedback.classList.add("opacity-100", "translate-y-0");
    };

    const clearFeedback = () => {
      feedback.classList.add("opacity-0", "translate-y-4");
      feedback.classList.remove("opacity-100", "translate-y-0");
    };

    newForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      if (!newInput.value) return;

      // UI Loading
      if (newBtn) newBtn.disabled = true;
      newBtnText?.classList.add("hidden");
      newBtnIcon?.classList.add("hidden");
      newBtnSpinner?.classList.remove("hidden");
      clearFeedback();

      try {
        // POST al endpoint API (Backend configurado previamente)
        const response = await fetch("/api/subscribe", {
          method: "POST",
          body: new FormData(newForm),
        });

        const data = await response.json();
        const success = data.success || response.ok;

        // UI Response
        updateFeedback(data.message, success);

        if (success) {
          newInput.value = ""; // Limpiar campo

          // Éxito visual en botón
          if (newBtn) {
            newBtn.classList.remove("bg-blue-600", "hover:bg-blue-500");
            newBtn.classList.add("bg-emerald-600", "cursor-default");
          }
          if (newBtnText) newBtnText.textContent = "¡Listo!";
          newBtnSpinner?.classList.add("hidden");
          newBtnText?.classList.remove("hidden");

          // Restaurar estado después de 4s
          setTimeout(() => {
            if (newBtn) {
              newBtn.disabled = false;
              newBtn.classList.add("bg-blue-600", "hover:bg-blue-500");
              newBtn.classList.remove("bg-emerald-600", "cursor-default");
            }
            if (newBtnText) newBtnText.textContent = "Quiero Acceso VIP";
            newBtnIcon?.classList.remove("hidden");
            clearFeedback();
          }, 4000);
        } else {
          // Error API
          newBtn!.disabled = false;
          newBtnSpinner?.classList.add("hidden");
          newBtnText?.classList.remove("hidden");
          newBtnIcon?.classList.remove("hidden");
        }
      } catch (error) {
        // Error Red
        updateFeedback("Error de conexión. Intenta más tarde.", false);
        newBtn!.disabled = false;
        newBtnSpinner?.classList.add("hidden");
        newBtnText?.classList.remove("hidden");
        newBtnIcon?.classList.remove("hidden");
      }
    });
  }

  // ViewTransitions + Carga inicial
  document.addEventListener("astro:page-load", () => {
    isInitialized = false; // Reset flag
    initNewsletter();
  });

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initNewsletter);
  } else {
    initNewsletter();
  }
</script>
