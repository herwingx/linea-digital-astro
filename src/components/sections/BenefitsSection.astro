---
// src/components/BenefitsSection.astro
import Button from "../ui/Button.astro";

const benefits = [
  {
    id: "cashback",
    title: "Cashback Telcel",
    description: "Recibe un porcentaje de la renta para pagar servicios adicionales en tu factura mensual.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    color: "bg-emerald-500"
  },
  {
    id: "prime",
    title: "Amazon Prime",
    description: " Contrata Amazon Prime con cargo a tu factura Telcel y disfruta de 6 meses sin costo.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
    color: "bg-blue-500"
  },
  {
    id: "streaming",
    title: "Claro Video + Paramount+",
    description: "Disfruta de las mejores películas, series y documentales en Claro Video más todo el contenido de Paramount+.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />`,
    color: "bg-red-500"
  },
  {
    id: "cloud",
    title: "Claro Drive 20GB",
    description: "Obtén 20 GB para guardar de forma segura tus fotos, videos y otros archivos para consultarlos desde cualquier dispositivo.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />`,
    color: "bg-cyan-500"
  },
];
---

<section class="relative py-20 md:py-16 overflow-hidden">
  
  <!-- Fondo Decorativo -->
  <div class="absolute inset-0 pointer-events-none -z-10">
     <div class="absolute top-1/2 right-0 -translate-y-1/2 w-[500px] h-[500px] bg-blue-900/20 rounded-full blur-[120px]"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    
    <div class="flex flex-col lg:flex-row items-start gap-12 lg:gap-20">
      
      <!-- 1. COLUMNA IZQUIERDA: INTRO -->
      <div class="lg:w-1/3 lg:sticky lg:top-32">
        <span class="inline-block py-1.5 px-4 rounded-full bg-blue-100/50 dark:bg-blue-500/10 border border-blue-200 dark:border-blue-500/30 text-blue-600 dark:text-blue-400 text-[10px] font-bold uppercase tracking-widest mb-6 backdrop-blur-sm">
           Ecosistema de Servicios
        </span>
        
        <h2 class="text-4xl md:text-5xl font-black text-slate-900 dark:text-white tracking-tight leading-[1.1] mb-6">
          Más que <br class="hidden lg:block" />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-300">solo Gigas.</span>
        </h2>
        
        <p class="text-xl text-slate-600 dark:text-slate-300 font-medium leading-relaxed mb-10 max-w-2xl mx-auto text-balance">
           Al contratar tu Plan Telcel, desbloqueas un mundo de entretenimiento y servicios premium sin costo adicional.
        </p>

        <Button href="/personas" variant="secondary" class="w-full sm:w-auto">
           Ver planes disponibles
        </Button>
      </div>

      <!-- 2. COLUMNA DERECHA: BENTO CARDS -->
      <div class="lg:w-2/3 grid grid-cols-1 md:grid-cols-2 gap-5">
        
        {benefits.map((item, index) => (
            <div class={`
               group relative overflow-hidden rounded-[2rem] 
               bg-white dark:bg-[#101623] 
               border border-slate-100 dark:border-white/5
               shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1
               p-8
               ${index === 2 ? 'md:col-span-2' : ''}
            `}>
                <!-- Gradient Glow on Hover -->
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-gradient-to-br from-white/50 to-transparent dark:from-white/5 pointer-events-none"></div>

                <div class="relative z-10 flex flex-col h-full">
                   <div class="flex items-start justify-between mb-6">
                       <div class={`w-12 h-12 rounded-2xl flex items-center justify-center text-white shadow-md ${item.color}`}>
                           <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <Fragment set:html={item.icon} />
                           </svg>
                       </div>
                       
                       <!-- Flecha Decorativa -->
                       <div class="w-8 h-8 rounded-full bg-slate-50 dark:bg-white/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all -translate-x-2 group-hover:translate-x-0 text-slate-400 dark:text-white">
                           <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                       </div>
                   </div>

                   <div>
                      <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">{item.title}</h3>
                      <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed font-medium">
                        {item.description}
                      </p>
                   </div>
                </div>
            </div>
        ))}

        <!-- Additional Info Card (Para cerrar el grid) -->
        <div class="rounded-[2rem] bg-gradient-to-br from-slate-900 to-blue-900 p-8 text-white flex items-center justify-between md:col-span-2 border border-white/10 relative overflow-hidden group cursor-pointer">
            <div class="relative z-10">
                <h3 class="font-bold text-lg">¿Dudas sobre las apps?</h3>
                <p class="text-sm text-blue-100 mt-1">Te ayudamos a activarlas en tu celular.</p>
            </div>
            <div class="relative z-10 w-10 h-10 rounded-full bg-white/20 flex items-center justify-center backdrop-blur-md group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
            </div>
            <!-- Texture -->
            <div class="absolute inset-0 opacity-10 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>
        </div>

      </div>

    </div>
  </div>
</section>