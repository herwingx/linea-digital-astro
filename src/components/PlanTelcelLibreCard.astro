---
// src/components/PlanTelcelLibreCard.astro
import SocialIcon from "./SocialIcon.astro";

export interface Props {
  titulo: string;
  datosIncluidos: string;
  redesSociales: string[];
  minutosYSms: string;
  cashbackTelcel?: string;
  precio: number;
  recommended?: boolean;
  enlace?: string;
}

const {
  titulo,
  datosIncluidos,
  redesSociales = [],
  minutosYSms = "",
  cashbackTelcel = "",
  precio,
  recommended = false,
} = Astro.props;

// --- Formateo ---
const formattedPrice = new Intl.NumberFormat("es-MX", {
  style: "currency",
  currency: "MXN",
  maximumFractionDigits: 0,
}).format(precio);

// Lógica WhatsApp
const SALES_NUMBER = "5219614603593";
const rawMessage = `Hola, me interesa más información sobre el plan *${titulo}* que incluye *${datosIncluidos}* por *${formattedPrice}* al mes.`;
const whatsappUrl = `https://wa.me/${SALES_NUMBER}?text=${encodeURIComponent(rawMessage)}`;
---

<!-- Card Outer Wrapper: Maneja el espaciado para las sombras grandes -->
<div class="relative w-full h-full py-8 px-2">
  <!-- BADGE DESTAQUE (Moved outside overflow-hidden) -->
  {
    recommended && (
      <div class="absolute top-4 left-0 right-0 flex justify-center z-20">
        <span class="inline-flex items-center gap-1 rounded-full border border-blue-400 bg-blue-500 px-4 py-1 text-[10px] font-bold uppercase tracking-widest text-white shadow-lg shadow-blue-500/30">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Más Popular
        </span>
      </div>
    )
  }

  <!-- CARD BODY -->
  <div
    class="plan-card relative flex h-full flex-col overflow-hidden rounded-[2.5rem] transition-all duration-500 border border-slate-100 bg-white/50 dark:bg-slate-900/80 dark:border-white/5"
  >
    <!-- Glow Gradient Background (Sutil - Visible solo en active) -->
    <div
      class="active-glow pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-blue-500/5 blur-3xl dark:bg-blue-500/10 opacity-0 transition-opacity duration-500"
    >
    </div>

    <!-- CARD PADDING (Reduced) -->
    <div class="flex flex-col h-full p-6 lg:p-8 pt-10 lg:pt-12 relative z-10">
      <!-- HEADER -->
      <div class="text-center mb-6">
        <h3
          class="mb-2 text-xs font-extrabold uppercase tracking-[0.2em] text-slate-400 dark:text-slate-500"
        >
          {titulo}
        </h3>
        <div class="flex items-baseline justify-center gap-1">
          <span
            class="text-4xl lg:text-5xl font-bold tracking-tighter text-slate-900 dark:text-white"
          >
            {formattedPrice}
          </span>
          <span class="text-sm font-medium text-slate-400">/mes</span>
        </div>
      </div>

      <!-- SEPARADOR SUTIL -->
      <div class="mb-6 w-full border-b border-slate-100 dark:border-white/5">
      </div>

      <!-- FEATURES LIST (Reduced spacing) -->
      <div class="flex-grow space-y-4">
        <!-- 1. DATOS -->
        <div class="flex items-start gap-4 group">
          <div
            class="icon-box flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-blue-50 text-blue-600 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3 dark:bg-blue-500/10 dark:text-blue-400"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
            >
          </div>
          <div>
            <p class="text-base font-bold text-slate-900 dark:text-white">
              {datosIncluidos}
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-400">
              Datos de navegación
            </p>
          </div>
        </div>

        <!-- 2. REDES SOCIALES -->
        <div class="flex items-start gap-4 group">
          <div
            class="icon-box flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-indigo-50 text-indigo-600 transition-transform duration-300 group-hover:scale-110 group-hover:-rotate-3 dark:bg-indigo-500/10 dark:text-indigo-400"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path></svg
            >
          </div>
          <div class="w-full">
            <p
              class="text-base font-bold text-slate-900 dark:text-white leading-tight"
            >
              Redes Incluidas
            </p>
            <div class="flex flex-wrap gap-2">
              {
                redesSociales.length > 0 ? (
                  redesSociales.map((red) => (
                    <div
                      class="text-slate-400 transition-colors hover:text-blue-500 dark:text-slate-600 dark:hover:text-blue-400"
                      title={red}
                    >
                      <SocialIcon name={red} size="md" />
                    </div>
                  ))
                ) : (
                  <span class="text-xs text-slate-400">Consultar detalles</span>
                )
              }
            </div>
          </div>
        </div>

        <!-- 3. LLAMADAS/SMS -->
        <div class="flex items-start gap-4 group">
          <div
            class="icon-box flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-emerald-50 text-emerald-600 transition-transform duration-300 group-hover:scale-110 dark:bg-emerald-500/10 dark:text-emerald-400"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              ></path></svg
            >
          </div>
          <div>
            <p
              class="text-base font-bold text-slate-900 dark:text-white leading-tight"
            >
              {minutosYSms}
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-400">
              LLamdas y Mensajes incluidos
            </p>
          </div>
        </div>

        <!-- 4. CASHBACK -->
        {
          cashbackTelcel && (
            <div class="flex items-start gap-4 group">
              <div class="icon-box flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-amber-50 text-amber-500 transition-transform duration-300 group-hover:scale-110 dark:bg-amber-500/10 dark:text-amber-400">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
              <div>
                <p class="text-base font-bold text-slate-900 dark:text-white leading-tight">
                  {cashbackTelcel}
                </p>
                <p class="text-xs text-slate-500 dark:text-slate-400">
                  Cashback Telcel
                </p>
              </div>
            </div>
          )
        }
      </div>

      <!-- BUTTON CTA -->
      <div class="mt-6">
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="cta-btn flex w-full items-center justify-center gap-2 rounded-full py-3 text-xs font-bold uppercase tracking-widest transition-all duration-300 hover:-translate-y-1 hover:shadow-xl bg-slate-100 text-slate-700 hover:bg-green-500 hover:text-white dark:bg-slate-800 dark:text-white dark:hover:bg-green-600"
        >
          <svg class="h-4 w-4 fill-current" viewBox="0 0 24 24"
            ><path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
            ></path></svg
          >
          Solicitar en Whatsapp
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  /* ESTILOS ACTIVOS DEL SWIPER */
  :global(.swiper-slide-active) .plan-card {
    @apply border-blue-500/30 bg-white shadow-2xl shadow-blue-900/15 ring-4 ring-blue-500/5 z-10 dark:bg-slate-800 dark:border-blue-400/30 dark:shadow-blue-900/40;
  }

  :global(.swiper-slide-active) .active-glow {
    @apply opacity-100;
  }

  :global(.swiper-slide-active) .cta-btn {
    @apply bg-green-600 text-white shadow-lg shadow-green-600/30 hover:bg-green-500 hover:shadow-green-500/40;
  }
</style>
