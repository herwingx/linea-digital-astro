---
// src/components/PlanCard.astro

export interface Props {
  titulo: string;
  datosIncluidos: string;
  redesSociales: string[]; // Ej: ['whatsapp', 'facebook', 'x']
  minutosYSms: string;
  cashbackTelcel: string;
  precio: number;
  recommended?: boolean;
  enlace?: string;
}

const { 
  titulo, 
  datosIncluidos, 
  redesSociales = [], 
  minutosYSms = "",
  cashbackTelcel = "",  
  precio, 
  recommended = false, 
  enlace = "Ver detalles", 
} = Astro.props;

// Diccionario de Iconos SVG (Gestión desde código para máximo control de estilo)
const ICONS_MAP: Record<string, string> = {
  whatsapp: `<path d="M12.04 2c-5.46 0-9.91 4.45-9.91 9.91 0 1.75.46 3.45 1.32 4.95L2.05 22l5.25-1.38c1.45.79 3.08 1.21 4.74 1.21 5.46 0 9.91-4.45 9.91-9.91 0-2.65-1.03-5.14-2.9-7.01A9.816 9.816 0 0012.04 2z"/>`,
  facebook: `<path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>`,
  x: `<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>`,
  instagram: `<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324z"/><path d="M12 16a4 4 0 110-8 4 4 0 010 8zm7.846-10.405a1.44 1.44 0 11-2.88 0 1.44 1.44 0 012.88 0z"/>`,
  // Fallback genérico
  default: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>`
};

// Formatear precio a MXN
const formattedPrice = new Intl.NumberFormat('es-MX', {
  style: 'currency',
  currency: 'MXN',
}).format(precio);

const SALES_NUMBER = "5219612113829"; 

const rawMessage = `Hola, me interesa más información sobre el plan *${titulo}* que incluye *${datosIncluidos}* por *${formattedPrice}* al mes.`;
const message = encodeURIComponent(rawMessage);
const whatsappUrl = `https://wa.me/${SALES_NUMBER}?text=${message}`;
---

<!-- Contenedor principal (Mismo wrapper para mantener consistencia con PromoCard) -->
<div class="group relative w-full max-w-md mx-auto h-full">
  
  <!-- 1. Efecto de "Glow" trasero (Color azul para identidad corporativa) -->
  <div class="absolute -inset-0.5 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl blur opacity-20 group-hover:opacity-60 transition duration-500 group-hover:duration-200"></div>
  
  <!-- 2. La tarjeta -->
  <div class="relative flex flex-col h-full bg-white dark:bg-[#0F172A] rounded-xl border dark:border-slate-800 border-slate-200 overflow-hidden p-6">
    
    <!-- Tag Recomendado (Lógica condicional) -->
    {recommended && (
      <div class="absolute top-0 left-0">
        <span class="inline-block bg-cyan-100 dark:bg-cyan-900/30 text-cyan-800 dark:text-cyan-300 text-xs font-bold px-3 py-1 rounded-br-xl border-b border-r border-cyan-200 dark:border-cyan-700/50 shadow-sm">
          Recomendado
        </span>
      </div>
    )}

    <!-- Encabezado -->
    <div class="mt-4 mb-2">
      <h3 class="text-xl font-bold text-blue-700 dark:text-blue-400 group-hover:text-blue-600 transition-colors">
        {titulo}
      </h3>
      <div class="w-12 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mt-2"></div>
    </div>

    <!-- Sección Datos (Gigabytes) -->
    <div class="mb-2">
      <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Datos incluidos</p>
      <p class="text-3xl font-black text-slate-800 dark:text-white tracking-tight">
        {datosIncluidos}
      </p>
    </div>

    <!-- Sección Redes Sociales -->
    <div class="mb-2">
      <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-2">
        Redes Sociales <span class="text-slate-800 dark:text-slate-200 font-bold">Ilimitadas</span>
      </p>
      <div class="flex flex-wrap gap-3">
        {redesSociales.length > 0 ? (
          redesSociales.map((network) => {
            const iconPath = ICONS_MAP[network.toLowerCase()] || ICONS_MAP['default'];
            const isDefault = !ICONS_MAP[network.toLowerCase()];
            return (
              <div 
                class="w-8 h-8 sm:w-6 sm:h-6 rounded-full bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:scale-110 hover:border-blue-400 hover:text-blue-500 dark:hover:text-white transition-all duration-300 shadow-sm"
                title={network}
              >
                <svg 
                  class="w-5 h-5 sm:w-4 sm:h-4" 
                  viewBox="0 0 24 24" 
                  fill={isDefault ? "none" : "currentColor"} 
                  stroke={isDefault ? "currentColor" : "none"}
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <Fragment set:html={iconPath} />
                </svg>
              </div>
            );
          })
        ) : (
          <span class="text-xs text-slate-400 italic">No incluye redes sociales ilimitadas</span>
        )}
      </div>
    </div>
    <div class="mb-1">
      <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">
        Minutos y SMS incluidos
      </p>
      <p class="font-black text-slate-800 dark:text-white tracking-tight">
        {minutosYSms}
      </p>
    </div>
    <div class="mb-1">
      <p class="text-slate-500 dark:text-slate-400 text-sm font-medium">
        Cashback Telcel
      </p>
      <p class="text-2xl font-black text-slate-800 dark:text-white tracking-tight">
        {cashbackTelcel}
      </p>
    </div>

    <!-- Spacer para empujar el precio y botón hacia abajo -->
    <div class="flex-grow border-t border-dashed border-slate-200 dark:border-slate-800 my-4"></div>

    <!-- Precio y Acción -->
    <div class="flex flex-col items-center gap-4 mt-auto">
      <div class="text-center">
        <p class="text-slate-500 text-xs uppercase tracking-widest font-semibold mb-1">Costo Mensual</p>
        <p class="text-3xl sm:text-4xl font-bold text-pink-600 dark:text-pink-500">
          {formattedPrice}
        </p>
      </div>

      <a 
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="w-50 py-3 px-4 bg-[#25D366] hover:bg-[#20BD5A] text-white text-center font-bold rounded-lg shadow-lg shadow-green-500/30 hover:shadow-green-600/50 transition-all duration-300 transform group-hover:-translate-y-0.5 flex items-center justify-center gap-2"
    >
      <!-- Icono de WhatsApp SVG -->
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      Solicitar Plan
    </a>
    </div>

  </div>
</div>