---
// src/components/InternetEnCasaPlanCard.astro

export interface Props {
  titulo: string;
  datosIncluidos: string;
  politicasDeUso: string;
  velocidadDeNavegacion: string;
  cashbackTelcel?: string;
  precio: number;
  recomendado?: boolean;
  enlace?: string;
}

const {
  titulo,
  datosIncluidos,
  politicasDeUso,
  velocidadDeNavegacion,
  cashbackTelcel,
  precio,
  recomendado = false,
  enlace,
} = Astro.props;

// Formateo de Precio
const formattedPrice = new Intl.NumberFormat("es-MX", {
  style: "currency",
  currency: "MXN",
  maximumFractionDigits: 0,
}).format(precio);

// Lógica WhatsApp Automatizada
const SALES_NUMBER = "5219612113829";
const rawMessage = `Hola, me interesa el servicio de Internet *${titulo}* con velocidad de *${velocidadDeNavegacion}* por *${formattedPrice}* al mes.`;
const whatsappUrl = `https://wa.me/${SALES_NUMBER}?text=${encodeURIComponent(rawMessage)}`;
---

<!-- Card Outer Wrapper: Altura completa y padding ajustado para Swiper -->
<div class="relative w-full h-full py-6 px-1 sm:px-2 flex flex-col">
  <!-- BADGE "MÁS VENDIDO" (Posicionamiento absoluto fuera del flujo) -->
  {
    recomendado && (
      <div class="absolute top-2 left-0 right-0 flex justify-center z-30 pointer-events-none">
        <span class="inline-flex items-center gap-1.5 rounded-full bg-blue-600 px-3 py-1 text-[10px] font-bold uppercase tracking-widest text-white shadow-lg shadow-blue-600/40 ring-2 ring-white dark:ring-slate-900">
          <svg
            class="w-3 h-3 text-blue-200"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Recomendado
        </span>
      </div>
    )
  }

  <!-- CARD BODY: Flex column para ocupar toda la altura -->
  <div
    class="plan-card group relative flex flex-1 flex-col overflow-hidden rounded-[2rem] transition-all duration-500 border border-slate-200 bg-white/60 dark:bg-slate-900/60 dark:border-white/5"
  >
    <!-- Glow Gradient Background (Sutil - Visible solo en active) -->
    <div
      class="active-glow pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-blue-500/5 blur-3xl dark:bg-blue-500/10 opacity-0 transition-opacity duration-500"
    >
    </div>

    <!-- CONTENIDO INTERNO: Padding responsivo -->
    <div
      class="flex flex-col h-full p-5 sm:p-6 lg:p-8 pt-8 sm:pt-10 lg:pt-12 relative z-10"
    >
      <!-- Header: Título e Icono -->
      <div class="flex items-start justify-between mb-4 sm:mb-6">
        <div class="pr-2">
          <h3
            class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white leading-tight"
          >
            {titulo}
          </h3>
          <p
            class="text-xs sm:text-sm text-slate-500 dark:text-slate-400 mt-1 font-medium"
          >
            Internet en Casa
          </p>
        </div>

        <!-- Icono Modem -->
        <div
          class="icon-box flex h-10 w-10 sm:h-12 sm:w-12 shrink-0 items-center justify-center rounded-2xl shadow-sm transition-all duration-300 bg-slate-100 text-slate-600 dark:bg-slate-800 dark:text-slate-400"
        >
          <svg
            class="w-5 h-5 sm:w-6 sm:h-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"
            ></path></svg
          >
        </div>
      </div>

      <!-- BLOQUE DESTACADO (Velocidad) -->
      <div
        class="mb-4 sm:mb-6 rounded-2xl bg-slate-50 p-4 dark:bg-black/20 border border-slate-100 dark:border-white/5 group-hover:border-blue-100 dark:group-hover:border-blue-900/30 transition-colors"
      >
        <!-- Velocidad -->
        <div class="mb-3 pb-3 border-b border-slate-200/50 dark:border-white/5">
          <span
            class="block text-[10px] font-bold uppercase tracking-wider text-slate-400 mb-0.5"
            >Velocidad de Bajada</span
          >
          <span
            class="text-2xl sm:text-2xl font-extrabold text-slate-900 dark:text-white tracking-tight"
            >{velocidadDeNavegacion}</span
          >
        </div>
        <!-- Datos -->
        <div class="flex items-center gap-3">
          <div
            class="shrink-0 p-1.5 rounded-lg bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
              ></path></svg
            >
          </div>
          <div>
            <p
              class="text-sm font-bold text-slate-900 dark:text-white leading-none mb-0.5"
            >
              {datosIncluidos}
            </p>
            <p
              class="text-[10px] text-slate-500 dark:text-slate-400 uppercase tracking-wide"
            >
              Capacidad
            </p>
          </div>
        </div>
      </div>

      <!-- INFO ADICIONAL (Política & Cashback) - Flex Grow para empujar footer -->
      <div class="space-y-3 flex-grow">
        <!-- Política -->
        <div class="flex items-start gap-3 group/item">
          <div
            class="shrink-0 mt-0.5 text-emerald-500 transition-transform group-hover/item:scale-110"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
            >
          </div>

          <p
            class="text-xs sm:text-sm text-slate-600 dark:text-slate-300 font-medium leading-snug"
          >
            {politicasDeUso}
          </p>
        </div>

        <!-- Cashback -->
        {
          cashbackTelcel && (
            <div class="flex items-start gap-3 group/item">
              <div class="shrink-0 mt-0.5 text-amber-500 transition-transform group-hover/item:scale-110">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>

              <div>
                <p class="text-xs sm:text-sm font-bold text-slate-900 dark:text-white leading-none mb-0.5">
                  {cashbackTelcel}
                </p>
                <p class="text-[10px] sm:text-xs text-slate-500">
                  Saldo de regalo
                </p>
              </div>
            </div>
          )
        }
      </div>

      <!-- FOOTER: PRECIO & CTA -->
      <div class="mt-6 pt-5 border-t border-slate-100 dark:border-slate-800">
        <div class="flex justify-between items-end mb-4">
          <div>
            <p
              class="text-[10px] font-bold text-slate-400 uppercase tracking-wider mb-0.5"
            >
              Renta Mensual
            </p>
            <div class="flex items-baseline gap-1">
              <p
                class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-slate-900 dark:text-white tracking-tight"
              >
                {formattedPrice}
              </p>
              <span class="text-xs font-medium text-slate-400">/mes</span>
            </div>
          </div>
        </div>

        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="cta-btn group/btn relative flex w-full items-center justify-center gap-2 overflow-hidden rounded-xl sm:rounded-2xl py-3 sm:py-3.5 text-xs sm:text-sm font-bold text-white transition-all duration-300 bg-slate-900 shadow-slate-900/20 hover:bg-blue-600 dark:bg-white dark:text-slate-900 dark:hover:bg-slate-200"
        >
          <!-- Shine Effect Animation -->
          <div
            class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/20 to-transparent transition-transform duration-700 group-hover/btn:translate-x-full"
          >
          </div>

          <span>Lo Quiero</span>
          <svg
            class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
          >
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  /* ESTILOS ACTIVOS DEL SWIPER */
  /* Cuando la slide es activa (.swiper-slide-active), aplicamos los estilos premium */

  :global(.swiper-slide-active) .plan-card {
    @apply border-blue-500/50 bg-white shadow-2xl shadow-blue-900/15 z-10 dark:bg-slate-800 dark:border-blue-400/50 dark:shadow-blue-900/40 scale-[1.02];
    border-width: 2px;
  }

  :global(.swiper-slide-active) .active-glow {
    @apply opacity-100;
  }

  :global(.swiper-slide-active) .icon-box {
    @apply bg-blue-50 text-blue-600 dark:bg-blue-500/20 dark:text-blue-300;
  }

  :global(.swiper-slide-active) .cta-btn {
    @apply bg-blue-600 shadow-blue-600/30 hover:bg-blue-500 text-white dark:bg-blue-600 dark:text-white dark:hover:bg-blue-500;
  }
</style>
