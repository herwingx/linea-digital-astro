---
import { Image } from "astro:assets";
import logoWhite from "../assets/logo-white.svg";
import logoDark from "../assets/logo-dark.svg";
import SocialIcon from "./SocialIcon.astro";

const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "Facebook", href: "https://facebook.com" },
  { name: "Instagram", href: "https://instagram.com" },
  { name: "X", href: "https://twitter.com" },
];

const footerLinks = [
  {
    title: "Explorar",
    links: [
      { label: "Personas", href: "/personas" },
      { label: "Empresas", href: "/empresas" },
      { label: "Asociados", href: "/asociados" },
      { label: "Nosotros", href: "/nosotros" },
    ],
  },
  {
    title: "Soporte",
    links: [
      { label: "Centro de Ayuda", href: "/contacto" },
      { label: "Cobertura", href: "#" },
      { label: "Términos y Condiciones", href: "#" },
      { label: "Aviso de Privacidad", href: "#" },
    ],
  },
];
---

<footer
  class="relative w-full pt-20 pb-10 overflow-hidden border-t border-slate-200 dark:border-slate-900"
>
  <div class="relative z-10 mx-auto max-w-7xl px-6 md:px-8">
    <!-- TOP SECTION: CTA & BRAND -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 mb-16">
      <!-- BRAND COLUMN (4 cols) -->
      <div class="lg:col-span-4 space-y-6">
        <a href="/" class="inline-block" aria-label="Inicio Línea Digital">
          <Image
            src={logoWhite}
            alt="Línea Digital Logo"
            class="w-48 h-auto hidden dark:block hover:opacity-90 transition-opacity"
          />
          <Image
            src={logoDark}
            alt="Línea Digital Logo"
            class="w-48 h-auto dark:hidden hover:opacity-90 transition-opacity"
          />
        </a>
        <p
          class="text-slate-500 dark:text-slate-400 leading-relaxed text-sm max-w-sm"
        >
          Conectando tu mundo con las mejores soluciones en telefonía móvil e
          internet residencial. Innovación y servicio de calidad en cada
          conexión.
        </p>

        <!-- SOCIAL ICONS -->
        <div class="flex items-center gap-3 pt-2">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex h-10 w-10 items-center justify-center rounded-full bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 text-slate-500 transition-all duration-300 hover:scale-110 hover:border-blue-500 hover:bg-blue-500 hover:text-white dark:hover:border-blue-500 dark:hover:bg-blue-500 dark:hover:text-white shadow-sm"
                aria-label={`Síguenos en ${social.name}`}
              >
                <SocialIcon name={social.name} size="sm" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- LINKS COLUMNS (2 cols each) -->
      {
        footerLinks.map((section) => (
          <div class="lg:col-span-2 lg:col-start-auto">
            <h3 class="font-bold text-sm uppercase tracking-widest text-slate-900 dark:text-white mb-6">
              {section.title}
            </h3>
            <ul class="space-y-3">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors flex items-center gap-2 group"
                  >
                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500 opacity-0 -ml-3.5 group-hover:opacity-100 group-hover:ml-0 transition-all duration-300" />
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <!-- CONTACT COLUMN (4 cols) -->
      <div class="lg:col-span-4">
        <h3
          class="font-bold text-sm uppercase tracking-widest text-slate-900 dark:text-white mb-6"
        >
          Contacto
        </h3>

        <!-- CONTACT CARD -->

        <ul class="space-y-5">
          <li class="flex items-start gap-4">
            <div>
              <p
                class="text-xs font-bold text-slate-400 uppercase tracking-wide mb-0.5"
              >
                Correo
              </p>
              <a
                href="mailto:contacto@linea-digital.com"
                class="text-sm font-medium text-slate-700 dark:text-slate-200 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                contacto@linea-digital.com
              </a>
            </div>
          </li>

          <li class="flex items-start gap-4">
            <div>
              <p
                class="text-xs font-bold text-slate-400 uppercase tracking-wide mb-0.5"
              >
                Teléfono
              </p>
              <a
                href="tel:9616189200"
                class="text-sm font-medium text-slate-700 dark:text-slate-200 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                961 618 92 00
              </a>
            </div>
          </li>

          <li class="flex items-start gap-4">
            <div>
              <p
                class="text-xs font-bold text-slate-400 uppercase tracking-wide mb-0.5"
              >
                Ubicación
              </p>
              <p class="text-sm text-slate-600 dark:text-slate-300">
                Tuxtla Gutiérrez, Chiapas. México
              </p>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- BOTTOM BAR -->
    <div
      class="pt-8 border-t border-slate-200 dark:border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p
        class="text-xs text-slate-500 dark:text-slate-400 text-center md:text-left"
      >
        © {currentYear}
        <span class="font-bold text-slate-700 dark:text-slate-200"
          >Grupo Línea Digital</span
        >. Todos los derechos reservados.
      </p>

      <div class="flex items-center gap-6">
        <a
          href="#"
          class="text-xs font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors"
        >
          Privacidad
        </a>
        <a
          href="#"
          class="text-xs font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors"
        >
          Términos
        </a>
        <a
          href="#"
          class="text-xs font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors"
        >
          Cookies
        </a>
      </div>
    </div>
  </div>
</footer>
