    opacity: 0;
    transform: scale(0);
  }

  /* Window States */
  #chatbot-window.active {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: auto;
  }

  /* Scrollbar Hide Utility */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* Mobile Responsive Fixes */
  @media (max-width: 640px) {
    #chatbot-window {
      bottom: 0;
      right: 0;
      left: 0;
      max-width: 100%;
      height: 100dvh;
      max-height: 100dvh;
      border-radius: 0;
      transform: translateY(100%);
    }
    #chatbot-window.active {
      transform: translateY(0);
    }

    /* Hide FAB when open on mobile */
    .chatbot-fab.active {
      opacity: 0;
      pointer-events: none;
    }
  }
</style>

