---
// src/components/InteractiveMexicoMap.astro
import VectorMap from "./VectorMap";
---

<div
  class="w-full h-full min-h-[400px] flex items-center justify-center bg-slate-100 dark:bg-[#151e2e] rounded-[2.5rem] overflow-hidden"
>
  <!-- client:only para evitar problemas con 'window' en build -->
  <VectorMap client:only="react" />
</div>

<!-- Global styles helper (Opcional si ya tienes css global) -->
<style is:global>
  /* Prevenir scroll dentro del tooltip en movil */
  .react-tooltip {
    pointer-events: none !important;
  }
</style>
