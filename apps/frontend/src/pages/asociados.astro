---
// src/pages/asociados.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import AnimatedCounter from "../components/ui/AnimatedCounter.astro";

// --- TYPES & DATA ---
// Enfoque: Beneficios tangibles para un comerciante físico
// src/pages/asociados.astro

const FEATURES = [
  {
    id: 1,
    title: "Máxima Rentabilidad",
    subtitle: "Margen Superior",
    desc: "Olvida los centavos. Gana comisiones reales en Recargas y utilidades de hasta el 20% vendiendo Smartphones a crédito.",
    icon: "money",
    colSpan: "md:col-span-2", // Tarjeta Grande
    accent: "emerald", // Color tema
    gradient: "from-emerald-500/20 via-teal-500/5 to-transparent" // Glow de fondo
  },
  {
    id: 2,
    title: "Inventario $0 Costo",
    subtitle: "Sin Inversión mínima",
    desc: "Te llenamos la vitrina sin que pagues un peso por adelantado. Nosotros ponemos los equipos y los chips; tú pones el mostrador. (Sujeto a buró).",
    icon: "box",
    colSpan: "md:col-span-1", // Tarjeta Cuadrada
    accent: "blue",
    gradient: "from-blue-600/20 via-indigo-500/5 to-transparent"
  },
  {
    id: 3,
    title: "Oficina en tu Celular",
    subtitle: "App de Gestión",
    desc: "Realiza recargas en 5 segundos, tramita créditos y revisa tus ganancias en tiempo real desde nuestra plataforma Web o App.",
    icon: "device",
    colSpan: "md:col-span-1", // Tarjeta Cuadrada
    accent: "violet",
    gradient: "from-violet-600/20 via-purple-500/5 to-transparent"
  },
  {
    id: 4,
    title: "Imagen Telcel",
    subtitle: "PRespaldo de Marca",
    desc: "Viste tu negocio de azul. Al ser socio, te regalamos la publicidad exterior para atraer a todos los usuarios de la red #1.",
    icon: "star",
    colSpan: "md:col-span-2", // Tarjeta Grande
    accent: "amber",
    gradient: "from-amber-500/20 via-orange-500/5 to-transparent"
  }
];

// Nuevas imágenes HD que sí cargan y tienen estilo "Lifestyle"
const INVENTORY = [
  { 
    category: "TRÁFICO DIARIO", 
    title: "Chips & Portabilidad", 
    metric: "Gana comisiones y bonos en efectivo", // Mucho más atractivo que "Gana comisiones"
    image: "https://images.unsplash.com/photo-1753036051291-cfc20d052c24?q=80&w=1470&auto=format&fit=crop",
    tagColor: "bg-emerald-500"
  },
  { 
    category: "ALTA RENTABILIDAD", 
    title: "Celulares al Mayoreo", 
    metric: "Precios especiales desde 3 piezas", // "Especiales" suena mejor que "mayoreo"
    image: "https://images.unsplash.com/photo-1689804847815-50398ac952b2?q=80&w=1470&auto=format&fit=crop",
    tagColor: "bg-blue-600"
  },
  { 
    category: "VENTA RECURRENTE", 
    title: "Tiempo Aire (TAE)", 
    metric: "Flujo de caja diario para tu local", // Explica el beneficio: tener dinero líquido
    image: "https://images.unsplash.com/photo-1760531932521-8eb5a064dbca?q=80&w=687&auto=format&fit=crop",
    tagColor: "bg-purple-600"
  },
  {
    category: "MARGEN LIBRE",
    title: "Accesorios & Gadgets",
    metric: "Tú defines el precio de venta final", // Empodera al dueño a ganar lo que quiera
    image: "https://images.unsplash.com/photo-1505740420928-5e560c06d30e?q=80&w=2070&auto=format&fit=crop",
    tagColor: "bg-amber-500"
  }
];
---

<BaseLayout
  title="Conviértete en Distribuidor | Grupo Linea Digital"
  description="Vende recargas, chips y equipos Telcel en tu negocio. Precios de mayoreo y altas comisiones."
>
  
  <!-- Ambient Glows -->
  <div class="fixed inset-0 z-0 pointer-events-none overflow-hidden">
      <div class="absolute top-[-10%] right-[20%] w-[40vw] h-[40vw] rounded-full bg-blue-600/10 blur-[120px] mix-blend-screen animate-pulse-slow"></div>
  </div>

<!-- 1. HERO SECTION: NEGOCIO Y OPORTUNIDAD -->
    <section class="relative pt-12 md:pb-24 px-6 text-center overflow-hidden">
      <!-- Contenido -->
      <div class="relative z-10 max-w-4xl mx-auto">
        
        <!-- Badge Animado -->
   <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-blue-50 border border-blue-200/60 dark:bg-blue-900/20 dark:border-blue-500/20 mb-8 backdrop-blur-sm">
            <span class="w-2 h-2 rounded-full bg-blue-600 dark:bg-blue-400 animate-pulse"></span>
            <span class="text-xs font-bold uppercase tracking-widest text-blue-700 dark:text-blue-300">OPORTUNIDAD DE NEGOCIO</span>
          </div>

        <h1 class="text-5xl sm:text-6xl md:text-7xl font-black tracking-tighter dark:text-white leading-[1.1] mb-8 drop-shadow-xl">
           Convierte tu negocio en un  <br class="hidden md:block" />
            <span class="text-transparent bg-clip-text bg-gradient-to-b from-blue-400 to-blue-700 dark:from-blue-400 dark:to-blue-200">Punto Telcel Oficial.</span>
        </h1>
        
        <p class="text-xl text-slate-600 dark:text-slate-300 font-medium leading-relaxed mb-10 max-w-2xl mx-auto text-balance">
            Dale a tu local el respaldo de la Red <strong>#1 del México.</strong> Accede a precios de mayoreo en equipos y sistema de recargas sin costo de afiliación.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-5">
            <!-- CTA Principal con Glow Efectivo -->
            <a href="https://wa.me/529614603593?text=Quiero%20ser%20distribuidor" target="_blank" class="group relative inline-flex h-14 items-center justify-center gap-3 overflow-hidden rounded-full bg-blue-600 px-10 text-sm font-bold uppercase tracking-widest text-white shadow-lg shadow-blue-600/40 transition-all hover:bg-blue-500 hover:scale-105 active:scale-95">
                <span class="relative z-10 flex items-center gap-2">
                    Quiero ser Asociado <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
                </span>
                <div class="absolute inset-0 -translate-x-full group-hover:animate-shine bg-gradient-to-r from-transparent via-white/25 to-transparent z-0"></div>
            </a>
            
            <a href="#beneficios" class="h-14 inline-flex items-center justify-center rounded-full px-8 text-sm font-bold uppercase tracking-widest text-slate-600 dark:text-slate-300 transition-colors dark:hover:text-white hover:text-slate-900 hover:border-slate-900/10 hover:bg-slate-900/5 dark:hover:bg-white/5 border border-transparent dark:hover:border-white/10 ">
                Cómo funciona
            </a>
        </div>
      </div>
    </section>

    <!-- 2. STATS DECK (Flotante y Premium) -->
    <!-- Margen negativo para solapar con el Hero, creando profundidad -->
    <div class="container mx-auto pt-16 pb-4 relative z-20 -mt-12 md:mb-32 mb-16">
        
        <div class="bg-white dark:bg-[#101623] backdrop-blur-xl border border-slate-200 dark:border-white/10 rounded-[2.5rem] shadow-2xl shadow-slate-200/50 dark:shadow-black/50 overflow-hidden max-w-5xl mx-auto relative group">
            
            <!-- Borde brillante superior sutil -->
            <div class="absolute top-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-slate-300 dark:via-white/20 to-transparent opacity-50"></div>

            <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-slate-100 dark:divide-white/5">
                 
                 <!-- STAT 1: PUNTOS DE VENTA -->
                 <div class="py-10 px-4 text-center hover:bg-slate-50 dark:hover:bg-white/5 transition-colors duration-300">
                    <div class="flex items-center justify-center gap-1 text-4xl md:text-5xl font-black text-slate-900 dark:text-white mb-2 tracking-tighter">
                        <span class="text-slate-400 dark:text-slate-500 text-2xl md:text-3xl">+</span>
                        <AnimatedCounter end={2500} duration={2000} />
                    </div>
                    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        Socios Activos
                    </p>
                 </div>
                 
                 <!-- STAT 2: COMISIÓN (Gancho de Dinero) -->
                 <div class="py-10 px-4 text-center hover:bg-emerald-50 dark:hover:bg-white/5 transition-colors duration-300 relative overflow-hidden">
                    <!-- Luz de fondo sutil -->
                    <div class="absolute inset-0 bg-emerald-500/5 opacity-0 hover:opacity-100 transition-opacity"></div>
                    
                    <div class="flex items-center justify-center text-4xl md:text-5xl font-black text-emerald-600 dark:text-emerald-400 mb-2 tracking-tighter shadow-emerald-500/20 drop-shadow-sm">
                        <AnimatedCounter end={15} duration={2000} /><span class="text-3xl">%</span>
                    </div>
                    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-400 hover:text-emerald-600 dark:hover:text-emerald-300 transition-colors relative z-10">
                        Margen de Ganancia
                    </p>
                 </div>

                 <!-- STAT 3: VELOCIDAD (Logística) -->
                 <div class="py-10 px-4 text-center hover:bg-cyan-50 dark:hover:bg-white/5 transition-colors duration-300">
                    <div class="flex items-center justify-center text-4xl md:text-5xl font-black text-cyan-600 dark:text-cyan-400 mb-2 tracking-tighter">
                        48<span class="text-2xl">h</span>
                    </div>
                    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-400 hover:text-cyan-600 dark:hover:text-cyan-300 transition-colors">
                        Envío de Stock
                    </p>
                 </div>

                 <!-- STAT 4: COSTO CERO (El Cierre) -->
                 <div class="py-10 px-4 text-center bg-blue-50 dark:bg-blue-600/10 hover:bg-blue-100 dark:hover:bg-blue-600/20 transition-colors duration-300 relative group/cost">
                    
                    <div class="flex items-center justify-center text-4xl md:text-5xl font-black text-blue-700 dark:text-white mb-2 tracking-tighter relative z-10">
                        $<AnimatedCounter end={0} duration={1000} />
                    </div>
                    
                    <div class="inline-block relative z-10">
                         <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-blue-600 dark:text-blue-200 group-hover/cost:text-blue-800 dark:group-hover/cost:text-white transition-colors">
                            Costo de Entrada
                         </p>
                         <!-- Pill "Gratis" -->
                         <span class="absolute -bottom-5 left-1/2 -translate-x-1/2 bg-blue-600 dark:bg-blue-500 text-white text-[9px] font-bold px-2 py-0.5 rounded text-center scale-0 group-hover/cost:scale-100 transition-transform origin-top">
                            ¡GRATIS!
                         </span>
                    </div>
                 </div>
            </div>
        </div>
    </div>
<!-- 3. BENTO GRID: MODELO DE NEGOCIO -->
  <section id="beneficios" class="md:py-24 pb-16 px-6 container mx-auto max-w-7xl">
      
      <!-- Header -->
      <div class="mb-16 max-w-2xl">
          <span class="text-blue-500 font-bold uppercase tracking-widest text-xs mb-3 block">Propuesta de Valor</span>
          <h2 class="text-3xl md:text-5xl font-black text-slate-900 dark:text-white tracking-tight mb-4 leading-tight">
              Tu éxito, nuestra <span class="text-transparent bg-clip-text bg-gradient-to-b from-blue-600 to-blue-800 dark:from-blue-400 dark:to-blue-200">infraestructura.</span>
          </h2>
          <p class="text-lg md:text-xl leading-relaxed text-slate-600 dark:text-slate-300 mb-10 max-w-xl mx-auto lg:mx-0 text-pretty font-medium">
              Eliminamos las barreras de entrada para que puedas competir con las grandes cadenas desde el día uno.
          </p>
      </div>

      <!-- Grid Layout -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[minmax(300px,auto)]">
          {FEATURES.map((feat) => (
              <div class={`group relative rounded-[2.5rem] p-[1px] overflow-hidden transition-all duration-500 hover:shadow-2xl hover:-translate-y-1 ${feat.colSpan}`}>
                  
                  <!-- A. Borde Gradiente Animado -->
                  <div class="absolute inset-0 bg-gradient-to-br from-slate-200 via-slate-300 to-slate-400 dark:from-slate-800 dark:via-slate-900 dark:to-slate-950 transition-opacity duration-500 group-hover:opacity-0"></div>
                  <div class={`absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 bg-gradient-to-r ${feat.id === 1 ? 'from-emerald-500/50' : feat.id === 2 ? 'from-blue-500/50' : feat.id === 3 ? 'from-violet-500/50' : 'from-amber-500/50'} to-transparent`}></div>

                  <!-- B. Contenido Tarjeta (Adaptativo Light/Dark) -->
                  <div class="relative h-full rounded-[2.45rem] bg-white dark:bg-[#101623] p-8 md:p-10 overflow-hidden flex flex-col justify-between">
                      
                      <!-- Background Glow Orb (Dynamic Color) -->
                      <div class={`absolute -top-20 -right-20 w-64 h-64 rounded-full blur-[80px] bg-gradient-to-br opacity-10 dark:opacity-20 group-hover:opacity-20 dark:group-hover:opacity-30 transition-all duration-700 ${feat.gradient}`}></div>

                      <!-- Icono Floating (Glass Container) -->
                      <div class="relative w-16 h-16 mb-8 rounded-2xl bg-slate-50 border border-slate-200 dark:bg-white/5 dark:border-white/10 flex items-center justify-center backdrop-blur-sm group-hover:scale-110 group-hover:bg-white/50 dark:group-hover:bg-white/10 transition-all duration-500 shadow-lg">
                          
                          {/* Icon Logic Switch */}
                          {feat.icon === 'money' && <svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>}
                          
                          {feat.icon === 'box' && <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>}
                          
                          {feat.icon === 'device' && <svg class="w-8 h-8 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>}
                          
                          {feat.icon === 'star' && <svg class="w-8 h-8 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>}
                          
                      </div>

                      <!-- Texto con mejor contraste -->
                      <div>
                          <div class={`text-xs font-bold uppercase tracking-widest mb-2 opacity-70 group-hover:opacity-100 transition-opacity ${feat.accent === 'emerald' ? 'text-emerald-600 dark:text-emerald-400' : feat.accent === 'blue' ? 'text-blue-600 dark:text-blue-400' : feat.accent === 'violet' ? 'text-violet-600 dark:text-violet-400' : 'text-amber-600 dark:text-amber-400'}`}>
                              {feat.subtitle}
                          </div>
                          <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 leading-tight group-hover:translate-x-1 transition-transform duration-300">
                              {feat.title}
                          </h3>
                          <p class="text-slate-600 dark:text-slate-400 text-base leading-relaxed border-l-2 border-slate-200 dark:border-slate-700/50 pl-4 group-hover:border-slate-400/50 dark:group-hover:border-slate-500/50 group-hover:text-slate-900 dark:group-hover:text-slate-300 transition-all">
                              {feat.desc}
                          </p>
                      </div>

                  </div>
              </div>
          ))}
      </div>
  </section>

<!-- 4. CATÁLOGO VISUAL (Slider Premium) -->
  <section class="md:py-24 py-8  relative overflow-hidden transition-colors duration-500">
      
      <!-- Luz Ambiental de Fondo -->
      <div class="absolute top-1/2 left-0 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-blue-500/10 dark:bg-blue-900/20 rounded-full blur-[120px] pointer-events-none"></div>

      <div class="container mx-auto px-6 mb-12 relative z-10">
          <div class="flex flex-col md:flex-row items-end justify-between gap-4">
              <div>
                  <span class="text-blue-600 dark:text-blue-500 font-bold uppercase tracking-widest text-xs mb-2 block">Tu Inventario</span>
                  <h2 class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white leading-tight">
                      ¿Qué puedes <span class="text-transparent bg-clip-text bg-gradient-to-b from-blue-400 to-blue-700 dark:from-blue-400 dark:to-blue-200">vender hoy?</span>
                  </h2>
              </div>
              
              <!-- Navegación Visual -->
              <!-- Navegación Visual (Botones) -->
              <div class="hidden md:flex items-center gap-3">
                  <button id="slide-left" class="w-12 h-12 rounded-full border border-slate-200 dark:border-white/10 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-white/10 hover:scale-105 active:scale-95 transition-all duration-300 group" aria-label="Anterior">
                      <svg class="w-5 h-5 group-hover:-translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                  </button>
                  <button id="slide-right" class="w-12 h-12 rounded-full border border-slate-200 dark:border-white/10 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-white/10 hover:scale-105 active:scale-95 transition-all duration-300 group" aria-label="Siguiente">
                      <svg class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                  </button>
              </div>
          </div>
      </div>

      <!-- Slider de Tarjetas -->
      <div id="inventory-slider" class="flex gap-5 overflow-x-auto pb-12 px-6 md:px-12 snap-x snap-mandatory hide-scrollbar scroll-smooth relative z-10">
          
          {INVENTORY.map((item, index) => (
              <article class="group relative flex-shrink-0 w-[300px] sm:w-[340px] aspect-[9/14] rounded-[2rem] overflow-hidden snap-center cursor-pointer border border-slate-200 dark:border-white/5 hover:border-blue-500/30 transition-all duration-300 shadow-xl shadow-slate-200/50 dark:shadow-black/40 hover:shadow-2xl hover:shadow-blue-500/20">
                  
                  <!-- 1. Imagen de Fondo con Zoom Effect -->
                  <div class="absolute inset-0 w-full h-full bg-slate-900">
                      <img 
                        src={item.image} 
                        alt={item.title} 
                        class="w-full h-full object-cover transition-transform duration-[800ms] group-hover:scale-110 opacity-90"
                        loading="lazy" 
                      />
                      <!-- Capas de oscurecimiento para legibilidad -->
                      <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent opacity-80 dark:opacity-90"></div>
                      <div class="absolute inset-0 bg-blue-600/20 mix-blend-overlay opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  </div>

                  <!-- 2. Contenido (Texto Flotante) -->
                  <div class="absolute inset-0 p-8 flex flex-col justify-end items-start">
                      
                      <!-- Badge Categoría (Pill) -->
                      <div class={`mb-4 px-3 py-1.5 rounded-full ${item.tagColor} text-white text-[10px] font-bold uppercase tracking-widest shadow-lg backdrop-blur-md bg-opacity-90 transform -translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-100`}>
                          {item.category}
                      </div>

                      <!-- Título -->
                      <h3 class="text-3xl font-black text-white leading-none mb-3 drop-shadow-lg">
                          {item.title}
                      </h3>

                      <!-- Separador -->
                      <div class="w-12 h-1 bg-blue-500 rounded-full mb-3 group-hover:w-full transition-all duration-700 ease-out"></div>

                      <!-- Métrica de Dinero (Gancho Principal) -->
                      <p class="text-emerald-300 font-medium text-sm flex items-center gap-2">
                          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                          {item.metric}
                      </p>
                  </div>
                  
                  <!-- Full Click Area Overlay (UX) -->
                  <a href={`https://wa.me/529614603593?text=Info%20sobre%20${item.title}`} target="_blank" class="absolute inset-0 z-20" aria-label={`Consultar sobre ${item.title}`}></a>
              </article>
          ))}

          <!-- Last Card: CTA Descargar Catálogo (Glass Design) -->
          <article class="group relative flex-shrink-0 w-[300px] sm:w-[340px] aspect-[9/14] rounded-[2rem] overflow-hidden snap-center flex flex-col items-center justify-center text-center bg-white dark:bg-[#111827] border-2 border-dashed border-slate-300 dark:border-slate-800 hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/10 transition-all duration-300 group-last shadow-lg shadow-slate-200/50 dark:shadow-none">
               <div class="w-20 h-20 rounded-full bg-slate-100 dark:bg-slate-800 group-hover:bg-blue-100 dark:group-hover:bg-blue-600 flex items-center justify-center text-slate-400 group-hover:text-blue-600 dark:group-hover:text-white transition-all duration-500 mb-6 shadow-xl group-hover:scale-110 group-hover:shadow-blue-500/20">
                  <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
